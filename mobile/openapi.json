  "components": {
    "schemas": {
      "BulkAppointmentItemRequest": {
        "required": [
          "petId",
          "categoryId",
          "appointmentDate",
          "appointmentTime"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "integer",
            "format": "int32"
          },
          "categoryId": {
            "type": "integer",
            "format": "int32"
          },
          "subtypeId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "appointmentDate": {
            "type": "string",
            "format": "date-time"
          },
          "appointmentTime": {
            "type": "string"
          },
          "notes": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ChangePasswordRequest": {
        "required": ["currentPassword", "newPassword", "confirmPassword"],
        "type": "object",
        "properties": {
          "currentPassword": {
            "type": "string"
          },
          "newPassword": {
            "minLength": 8,
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          }
        }
      },
      "CreateAppointmentRequest": {
        "required": [
          "petId",
          "categoryId",
          "appointmentDate",
          "appointmentTime"
        ],
        "type": "object",
        "properties": {
          "petId": {
            "type": "integer",
            "format": "int32"
          },
          "categoryId": {
            "type": "integer",
            "format": "int32"
          },
          "subtypeId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "appointmentDate": {
            "type": "string",
            "format": "date-time"
          },
          "appointmentTime": {
            "type": "string"
          },
          "notes": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "CreateBulkAppointmentRequest": {
        "required": ["appointments"],
        "type": "object",
        "properties": {
          "appointments": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BulkAppointmentItemRequest"
            }
          }
        }
      },
      "ForgotPasswordRequest": {
        "required": ["email"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        }
      },
      "IFormFile": {
        "type": "string",
        "format": "binary"
      },
      "LoginRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "deviceInfo": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "RefreshTokenRequest": {
        "required": ["refreshToken"],
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "RegisterRequest": {
        "required": [
          "firstName",
          "lastName",
          "email",
          "phone",
          "password",
          "confirmPassword"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "pattern": "^\\d{11}$",
            "type": "string"
          },
          "password": {
            "minLength": 8,
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          }
        }
      },
      "ResetPasswordRequest": {
        "required": ["token", "newPassword", "confirmPassword"],
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          },
          "newPassword": {
            "minLength": 8,
            "type": "string"
          },
          "confirmPassword": {
            "type": "string"
          }
        }
      },
      "UpdateProfileRequest": {
        "required": ["firstName", "lastName", "phone"],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "phone": {
            "pattern": "^\\d{11}$",
            "type": "string"
          }
        }
      },
      "Verify2FARequest": {
        "required": ["userId", "code"],
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32"
          },
          "code": {
            "maxLength": 6,
            "minLength": 6,
            "type": "string"
          },
          "deviceInfo": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  },
