@model PetCloud.Models.User
@{
    ViewBag.Title = "Edit User";
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    string fallback = Url.Content("~/uploads/profiles/pet.png");
    var photo = string.IsNullOrEmpty(Model.ProfileImage) ? fallback : Url.Content(Model.ProfileImage);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2><i class="bi bi-pencil-square"></i>Edit User</h2>
    <p>Update information for @Model.FirstName @Model.LastName</p>
</div>

<!-- Breadcrumb -->
<div class="breadcrumb-modern mb-4">
    <a href="@Url.Action("Users", "Staff")"><i class="bi bi-people me-1"></i>All Users</a>
    <span class="separator">/</span>
    <span class="current">Edit User</span>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="messageToast" class="toast toast-modern align-items-center text-white border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body d-flex align-items-center gap-2">
                <i class="bi" id="toastIcon"></i>
                <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- User Preview Card -->
    <div class="col-lg-4">
        <div class="page-card-modern">
            <div class="card-header-modern">
                <h6><i class="bi bi-person-badge me-2"></i>USER PREVIEW</h6>
            </div>
            <div class="card-body p-4">
                <div class="pet-profile-preview">
                    <img id="profilePreview" src="@photo" alt="@Model.FirstName @Model.LastName"
                         onerror="this.onerror=null;this.src='@fallback';" />
                    <div class="pet-name" id="previewName">@Model.FirstName @Model.LastName</div>
                    <div class="pet-breed" id="previewEmail">@Model.Email</div>
                </div>

                <div class="photo-upload-container mt-4" id="uploadContainer">
                    <i class="bi bi-cloud-arrow-up photo-upload-icon"></i>
                    <p class="photo-upload-text mb-2">
                        <strong>Click to upload</strong> or drag and drop
                    </p>
                    <small class="text-muted">PNG, JPG up to 5MB</small>
                    <input type="file" name="ProfileImage" accept="image/*" id="photoInput" form="editUserForm" />
                </div>
            </div>
        </div>
    </div>

    <!-- User Information Form -->
    <div class="col-lg-8">
        <div class="page-card-modern">
            <div class="card-header-modern">
                <h6><i class="bi bi-clipboard-data me-2"></i>USER INFORMATION</h6>
            </div>
            <div class="card-body p-4">
                <form id="editUserForm" method="post" enctype="multipart/form-data" action="@Url.Action("EditUser", "Staff")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.UserID" />

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-person me-2"></i>First Name
                                </label>
                                <input type="text" name="FirstName" id="firstNameInput" value="@Model.FirstName"
                                       class="form-control form-control-modern" placeholder="Enter first name" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-person me-2"></i>Last Name
                                </label>
                                <input type="text" name="LastName" id="lastNameInput" value="@Model.LastName"
                                       class="form-control form-control-modern" placeholder="Enter last name" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-envelope me-2"></i>Email
                                </label>
                                <input type="email" name="Email" id="emailInput" value="@Model.Email"
                                       class="form-control form-control-modern" placeholder="Enter email address" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-phone me-2"></i>Phone
                                </label>
                                <input type="tel" name="Phone" id="Phone" value="@Model.Phone"
                                       class="form-control form-control-modern"
                                       placeholder="e.g. 09123456789"
                                       inputmode="numeric" pattern="[0-9]{11}"
                                       minlength="11" maxlength="11" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label>
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <div class="position-relative">
                                    <input type="password" name="Password" id="editPassword"
                                           class="form-control form-control-modern"
                                           placeholder="Leave blank to keep current" />
                                    <span id="toggleEditPassword" class="position-absolute top-50 end-0 translate-middle-y me-3"
                                          style="cursor:pointer; color:#888;">
                                        <i id="eyeEditPassword" class="bi bi-eye"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label>
                                    <i class="bi bi-lock-fill me-2"></i>Confirm Password
                                </label>
                                <div class="position-relative">
                                    <input type="password" name="ConfirmPassword" id="editConfirmPassword"
                                           class="form-control form-control-modern"
                                           placeholder="Confirm new password" />
                                    <span id="toggleEditConfirmPassword" class="position-absolute top-50 end-0 translate-middle-y me-3"
                                          style="cursor:pointer; color:#888;">
                                        <i id="eyeEditConfirmPassword" class="bi bi-eye"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-shield me-2"></i>Type
                                </label>
                                <select name="Type" class="form-select form-select-modern" required>
                                    <option value="Admin" selected="@(Model.Type == "Admin" ? "selected" : null)">Admin</option>
                                    <option value="Staff" selected="@(Model.Type == "Staff" ? "selected" : null)">Staff</option>
                                    <option value="Owner" selected="@(Model.Type == "Owner" ? "selected" : null)">Owner</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-toggle-on me-2"></i>Status
                                </label>
                                <select name="Status" class="form-select form-select-modern" required>
                                    <option value="Active" selected="@(Model.Status == "Active" ? "selected" : null)">Active</option>
                                    <option value="Inactive" selected="@(Model.Status == "Inactive" ? "selected" : null)">Inactive</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Users", "Staff")" class="btn-modern-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to Users
                        </a>
                        <button type="submit" class="btn-modern-success">
                            <i class="bi bi-check-circle me-1"></i> Update User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modal -->
<div class="modal fade modal-modern" id="confirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #28a745, #20c997);">
                <h6 class="modal-title text-white">
                    <i class="bi bi-pencil-square"></i>
                    Confirm Changes
                </h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-question-circle display-1 text-success opacity-75"></i>
                </div>
                <p class="fw-semibold fs-5 mb-2">Save changes to this user?</p>
                <small class="text-muted">All modifications will be updated</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-modern-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="confirmSaveBtn" class="btn-modern-success">
                    <i class="bi bi-check2-circle me-1"></i> Yes, Update User
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Live preview for name
            $('#firstNameInput, #lastNameInput').on('input', function () {
                const first = $('#firstNameInput').val().trim() || '';
                const last = $('#lastNameInput').val().trim() || '';
                $('#previewName').text((first + ' ' + last).trim() || 'User Name');
            });

            // Live preview for email
            $('#emailInput').on('input', function () {
                $('#previewEmail').text($(this).val().trim() || 'email@example.com');
            });

            // Phone numeric-only
            document.getElementById("Phone").addEventListener("input", function () {
                this.value = this.value.replace(/\D/g, '');
                if (this.value.length > 11) this.value = this.value.slice(0, 11);
            });

            // Password toggle
            $("#toggleEditPassword").click(function () {
                const input = $("#editPassword");
                const icon = $("#eyeEditPassword");
                const isHidden = input.attr("type") === "password";
                input.attr("type", isHidden ? "text" : "password");
                icon.toggleClass("bi-eye bi-eye-slash");
            });

            $("#toggleEditConfirmPassword").click(function () {
                const input = $("#editConfirmPassword");
                const icon = $("#eyeEditConfirmPassword");
                const isHidden = input.attr("type") === "password";
                input.attr("type", isHidden ? "text" : "password");
                icon.toggleClass("bi-eye bi-eye-slash");
            });

            // Toast function
            function showToast(message, isSuccess) {
                const toastEl = $('#messageToast');
                $('#toastMessage').text(message);
                $('#toastIcon').removeClass().addClass('bi ' + (isSuccess ? 'bi-check-circle-fill' : 'bi-exclamation-circle-fill'));
                toastEl.removeClass('toast-success toast-danger').addClass(isSuccess ? 'toast-success' : 'toast-danger');
                new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
            }

            // Photo upload handling
            const uploadContainer = $('#uploadContainer');
            const photoInput = $('#photoInput');
            const profilePreview = $('#profilePreview');

            uploadContainer.on('dragover', function (e) {
                e.preventDefault();
                $(this).addClass('drag-over');
            });

            uploadContainer.on('dragleave drop', function (e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
            });

            uploadContainer.on('drop', function (e) {
                const files = e.originalEvent.dataTransfer.files;
                if (files.length) {
                    photoInput[0].files = files;
                    photoInput.trigger('change');
                }
            });

            photoInput.on("change", function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (event) {
                        profilePreview.attr("src", event.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            });

            // Form submission
            $('#editUserForm').submit(function (e) {
                e.preventDefault();
                const form = this;
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();

                $('#confirmSaveBtn').off('click').on('click', function () {
                    const btn = $(this);
                    btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Saving...');
                    modal.hide();

                    var formData = new FormData(form);

                    $.ajax({
                        url: '@Url.Action("EditUser", "Staff")',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (res) {
                            showToast(res.message, res.success);
                            if (res.success) {
                                $.post('/Account/RefreshProfileImage')
                                    .done(r => {
                                        if (r.success) {
                                            $('img[alt="Profile Image"]').attr('src',
                                                `/uploads/profiles/${r.image}?t=${Date.now()}`);
                                        }
                                    });
                                setTimeout(() => {
                                    window.location.href = '@Url.Action("Users", "Staff")';
                                }, 1200);
                            }
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Update User');
                        },
                        error: function () {
                            showToast("Something went wrong while saving.", false);
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Update User');
                        }
                    });
                });
            });
        });
    </script>
}
