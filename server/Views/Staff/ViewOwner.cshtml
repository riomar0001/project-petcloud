@model PetCloud.Models.OwnerDetailsViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Owners";
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}
<div class="p-2">
    <a href="@Url.Action("Owners", "Admin")"
       class="btn btn-sm btn-view d-flex align-items-center justify-content-center"
       style="background-color:#FFAE34; border-radius:10px; width:36px; height:36px; font-size:20px;">
        <i class="bi bi-chevron-left text-black" style="position: relative; top: 2px;"></i>
    </a>
</div>
<div class="p-4">

    <div class="card shadow-sm border-0 p-4 mb-4">
        <h5 class="fw-bold mb-3">Basic Information</h5>

        <div class="row g-4 align-items-center text-center text-md-start">
            <div class="col-12 col-md-3 d-flex justify-content-center justify-content-md-start">
                <img id="profilePreview"
                     src="@Url.Content(Model.Owner.User?.ProfileImage ?? "~/uploads/profiles/pet.png")"
                     class="rounded-circle border border-4 border-success shadow img-fluid"
                     style="max-width:170px; height:auto; object-fit:cover;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
            </div>

            <div class="col-12 col-md-9 mt-3 mt-md-0">
                <div class="table-responsive">
                    <table class="table table-borderless align-middle mb-0">
                        <tbody>
                            <tr>
                                <th style="width:35%">Owner ID</th>
                                <td>@Model.Owner.OwnerID</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>@Model.Owner.Name</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Owner.Email</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>@Model.Owner.Phone</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="d-flex flex-wrap align-items-center justify-content-start px-3 py-2" style="background-color:var(--primary-green-light, #D1FAE5);">
            <span class="fw-semibold me-2">Filter:</span>
            <div class="dropdown me-3">
                <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        style="background-color:var(--primary-green, #10B981);">
                    @(string.IsNullOrEmpty(Model.TypeFilter) ? "All" : Model.TypeFilter)
                </button>
                <ul class="dropdown-menu statusfiltering">
                    <li><a class="dropdown-item text-black" href="?id=@Model.Owner.OwnerID&typeFilter=">All</a></li>
                    <li><a class="dropdown-item text-black" href="?id=@Model.Owner.OwnerID&typeFilter=Cat">Cat</a></li>
                    <li><a class="dropdown-item text-black" href="?id=@Model.Owner.OwnerID&typeFilter=Dog">Dog</a></li>
                </ul>
            </div>

            <form method="get" class="d-flex justify-content-end flex-grow-1">
                <input type="hidden" name="id" value="@Model.Owner.OwnerID" />
                <div class="input-group" style="max-width:300px;">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
                           value="@Model.SearchQuery" />
                    <button type="submit" class="btn" style="background-color:var(--primary-green, #10B981); color:white;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="card-body">
            <h6 class="fw-bold mb-3">Pets Owned by @Model.Owner.Name</h6>

            <div class="table-responsive">
                <table class="table align-middle text-center border">
                    <thead class="table-light">
                        <tr>
                            <th>Photo</th>
                            <th>Pet ID</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Breed</th>
                            <th>Birthdate</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Pets.Any())
                        {
                            foreach (var pet in Model.Pets)
                            {
                                <tr>
                                    <td>
                                        <img src="@Url.Content(pet.PhotoPath ?? "~/uploads/profiles/pet.png")"
                                             alt="Pet Photo"
                                             class="rounded-circle shadow-sm"
                                             style="width:60px; height:60px; object-fit:cover;"
                                             onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
                                    </td>
                                    <td>@pet.PetID</td>
                                    <td>@pet.Name</td>
                                    <td>@pet.Type</td>
                                    <td>@pet.Breed</td>
                                    <td>@pet.Birthdate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-3">No pets found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav class="mt-3">
                <ul class="pagination justify-content-center mb-0">

                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == 1 ? "#" : $"?id={Model.Owner.OwnerID}&page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&typeFilter={Model.TypeFilter}")">‹</a>
                    </li>

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?id=@Model.Owner.OwnerID&page=1&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter">1</a>
                        </li>

                        <li class="page-item">
                            <a class="page-link border-0 text-dark fw-bold"
                               href="?id=@Model.Owner.OwnerID&page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter">...</a>
                        </li>
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link rounded-circle border-0 text-black"
                                   style="background-color:var(--primary-green, #10B981);width:32px;height:32px;display:flex;align-items:center;justify-content:center;">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link rounded-circle border-0 text-dark"
                                   style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                                   href="?id=@Model.Owner.OwnerID&page=@i&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter">@i</a>
                            </li>
                        }
                    }

                    @if (endPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link border-0 text-dark fw-bold"
                               href="?id=@Model.Owner.OwnerID&page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter">...</a>
                        </li>

                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?id=@Model.Owner.OwnerID&page=@Model.TotalPages&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter">@Model.TotalPages</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?id={Model.Owner.OwnerID}&page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&typeFilter={Model.TypeFilter}")">›</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
