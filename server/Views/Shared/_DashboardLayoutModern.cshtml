@{
    var role = Context.Session.GetString("UserRole");
    var name = Context.Session.GetString("UserName");
    var profileImage = Context.Session.GetString("ProfileImage");
    var userEmail = Context.Session.GetString("UserEmail") ?? "user@PetCloud.com";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@role | @ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="/css/dashboard-modern.css" rel="stylesheet" />
    <link href="/css/modern-extensions.css" rel="stylesheet" />
    <link href="/css/notification.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>

<body>
    <!-- Modern Sidebar -->
    <aside class="sidebar-modern" id="sidebar">
        <div class="sidebar-logo-modern">
            <div class="logo-icon">
                <img src="~/images/PetCloud.png" alt="PetCloud" />
            </div>
            <h4>PetCloud</h4>
            <button class="toggle-btn d-lg-none" id="closeSidebar">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <nav class="sidebar-nav-modern">

            @* ================= OWNER ================= *@
            @if (role == "Owner") {
                <div class="nav-section">
                    <a href="/Owner/Dashboard" class="nav-item-modern @(ViewBag.Title == "Dashboard" ? "active" : "")">
                        <i class="bi bi-grid-1x2-fill"></i>
                        <span>Dashboard</span>
                    </a>

                    <a href="/Owner/Pets" class="nav-item-modern @(ViewBag.Title == "My Pets" ? "active" : "")">
                        <i class="bi bi-heart-fill"></i>
                        <span>My Pets</span>
                    </a>

                    <a href="/Owner/Appointments" class="nav-item-modern @(ViewBag.Title == "My Appointments" ? "active" : "")">
                        <i class="bi bi-calendar-check-fill"></i>
                        <span>Appointments</span>
                    </a>
                </div>
            }

            @* ================= ADMIN / STAFF ================= *@
            @if (role == "Admin" || role == "Staff") {
                var baseUrl = role == "Admin" ? "/Admin" : "/Staff";

                @* ===== CORE ===== *@
                <div class="nav-section">
                    <div class="nav-section-title">Core</div>

                    <a href="@baseUrl/Dashboard" class="nav-item-modern @(ViewBag.Title == "Dashboard" ? "active" : "")">
                        <i class="bi bi-grid-1x2-fill"></i>
                        <span>Dashboard</span>
                    </a>

                    <a href="@baseUrl/Pets" class="nav-item-modern @(ViewBag.Title == "Pets" ? "active" : "")">
                        <i class="bi bi-heart-fill"></i>
                        <span>Pets</span>
                    </a>

                    @* Appointments Dropdown (unchanged) *@
                    <div class="nav-dropdown">
                        <button class="nav-collapse-toggle" data-bs-toggle="collapse" data-bs-target="#appointmentsMenu">
                            <span><i class="nav-icon bi bi-calendar-check-fill"></i> Appointments</span>
                            <i class="bi bi-chevron-down caret"></i>
                        </button>
                        <div class="collapse nav-submenu" id="appointmentsMenu">
                            <a href="@baseUrl/ManageAppointments" class="nav-item-modern @(ViewBag.Title == "Manage Apointments" ? "active" : "")">
                                <i class="bi bi-receipt"></i> Manage
                            </a>
                            <a href="@baseUrl/Appointments" class="nav-item-modern @(ViewBag.Title == "Schedule" ? "active" : "")">
                                <i class="bi bi-calendar-fill"></i> Schedule
                            </a>
                        </div>
                    </div>

                    <a href="@baseUrl/Reports" class="nav-item-modern @(ViewBag.Title == "Reports" ? "active" : "")">
                        <i class="bi bi-receipt"></i>
                        <span>Reports</span>
                    </a>
                </div>

                @* ===== TOOLS ===== *@
                <div class="nav-section">
                    <div class="nav-section-title">Tools</div>

                    @* Services & Analytics Dropdown (unchanged) *@
                    <div class="nav-dropdown">
                        <button class="nav-collapse-toggle" data-bs-toggle="collapse" data-bs-target="#serviceAndAnalyticsMenu">
                            <span><i class="nav-icon bi bi-gear-fill"></i> Services & Analytics</span>
                            <i class="bi bi-chevron-down caret"></i>
                        </button>
                        <div class="collapse nav-submenu" id="serviceAndAnalyticsMenu">
                            <a href="@baseUrl/Predictive_Analytics" class="nav-item-modern @(ViewBag.Title == "Predictive Analytics" ? "active" : "")">
                                <i class="bi bi-graph-up-arrow"></i> Analytics
                            </a>
                            <a href="@baseUrl/Vaccination" class="nav-item-modern @(ViewBag.Title == "Vaccination" ? "active" : "")">
                                <i class="bi bi-capsule"></i> Vaccination
                            </a>
                            <a href="@baseUrl/Deworming_Preventives" class="nav-item-modern @(ViewBag.Title == "Deworming & Preventives" ? "active" : "")">
                                <i class="bi bi-bug"></i> Deworming
                            </a>
                            <a href="@baseUrl/Diagnostics_Laboratory" class="nav-item-modern @(ViewBag.Title == "Diagnostics & Laboratory Tests" ? "active" : "")">
                                <i class="bi bi-eyedropper"></i> Diagnostics
                            </a>
                            <a href="@baseUrl/Surgery" class="nav-item-modern @(ViewBag.Title == "Surgery" ? "active" : "")">
                                <i class="bi bi-heart-pulse"></i> Surgery
                            </a>
                            <a href="@baseUrl/Grooming_Wellness" class="nav-item-modern @(ViewBag.Title == "Grooming & Wellness" ? "active" : "")">
                                <i class="bi bi-scissors"></i> Grooming & Wellness
                            </a>
                            <a href="@baseUrl/Medication_Treatment" class="nav-item-modern @(ViewBag.Title == "Medication & Treatment" ? "active" : "")">
                                <i class="bi bi-capsule"></i> Medication & Treatment
                            </a>
                            <a href="@baseUrl/EndLife" class="nav-item-modern @(ViewBag.Title == "End of Life Care" ? "active" : "")">
                                <i class="bi bi-heartbreak"></i> End of Life Care
                            </a>
                            <a href="@baseUrl/Confinement_Hospitalization" class="nav-item-modern @(ViewBag.Title == "Confinement / Hospitalization" ? "active" : "")">
                                <i class="bi bi-hospital"></i> Confinement
                            </a>
                            <a href="@baseUrl/SpecialtyTests" class="nav-item-modern @(ViewBag.Title == "Specialty Tests / Rare Cases" ? "active" : "")">
                                <i class="bi bi-clipboard2-pulse"></i> Specialty Tests
                            </a>
                            <a href="@baseUrl/Professional_Fee" class="nav-item-modern @(ViewBag.Title == "Professional Fee / Consultation" ? "active" : "")">
                                <i class="bi bi-person-badge"></i> Consultation
                            </a>
                        </div>
                    </div>

                    @* Service Management Dropdown (unchanged) *@
                    <div class="nav-dropdown">
                        <button class="nav-collapse-toggle" data-bs-toggle="collapse" data-bs-target="#serviceManagementMenu">
                            <span><i class="nav-icon bi bi-gear-fill"></i> Service Management</span>
                            <i class="bi bi-chevron-down caret"></i>
                        </button>
                        <div class="collapse nav-submenu" id="serviceManagementMenu">
                            <a href="@baseUrl/ServiceCategory" class="nav-item-modern @(ViewBag.Title == "Service Category" ? "active" : "")">
                                <i class="bi bi-tags-fill"></i> Service Category
                            </a>
                            <a href="@baseUrl/ServiceType" class="nav-item-modern @(ViewBag.Title == "Service Type" ? "active" : "")">
                                <i class="bi bi-list-ul"></i> Service Type
                            </a>
                        </div>
                    </div>
                </div>

                @* ===== MANAGEMENT ===== *@
                <div class="nav-section">
                    <div class="nav-section-title">Management</div>

                    <a href="@baseUrl/Users" class="nav-item-modern @(ViewBag.Title == "Users" ? "active" : "")">
                        <i class="bi bi-people-fill"></i>
                        <span>Users</span>
                    </a>

                    <a href="@baseUrl/Owners" class="nav-item-modern @(ViewBag.Title == "Owners" ? "active" : "")">
                        <i class="bi bi-person-vcard-fill"></i>
                        <span>Owners</span>
                    </a>

                    @if (role == "Admin") {
                        <a href="@baseUrl/Logs" class="nav-item-modern @(ViewBag.Title == "Logs" ? "active" : "")">
                            <i class="bi bi-activity"></i>
                            <span>Activity Logs</span>
                        </a>
                    }
                </div>
            }
        </nav>

        <!-- User Profile Section -->
        <div class="sidebar-user-modern">
            <div class="user-profile-card">
                <img id="sidebarProfileImg"
                     src="@Url.Content("~/uploads/profiles/" + (string.IsNullOrEmpty(profileImage) ? "pet.png" : profileImage))"
                     alt="Profile"
                     onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
                <div class="user-info">
                    <div class="user-name">@name</div>
                    <div class="user-email">@role</div>
                </div>
                <div class="dropup">
                    <button class="btn btn-link p-0 dropdown-toggle" data-bs-toggle="dropdown">
                        <i class="bi bi-chevron-expand text-secondary"></i>
                    </button>
                    @{
                        var profileUrl = role switch
                        {
                            "Owner" => Url.Content("~/Owner/Profile"),
                            "Admin" => Url.Content("~/Admin/Profile"),
                            "Staff" => Url.Content("~/Staff/Profile"),
                            _ => Url.Content("~/Account/Profile")
                        };
                    }
                    <div class="dropdown-menu profile-dropdown">
                        <div class="profile-dropdown-header">
                            <img src="@Url.Content("~/uploads/profiles/" + (string.IsNullOrEmpty(profileImage) ? "pet.png" : profileImage))"
                                 alt="Profile"
                                 onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
                            <div>
                                <div class="profile-dropdown-name">@name</div>
                                <div class="profile-dropdown-role">@role</div>
                            </div>
                        </div>
                        <div class="profile-dropdown-body">
                            <a href="@profileUrl" class="profile-dropdown-item">
                                <div class="profile-dropdown-icon primary">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div>
                                    <div class="profile-dropdown-item-label">My Profile</div>
                                    <div class="profile-dropdown-item-desc">View and edit your details</div>
                                </div>
                            </a>
                            <a href="/Account/Logout" class="profile-dropdown-item logout">
                                <div class="profile-dropdown-icon danger">
                                    <i class="bi bi-box-arrow-right"></i>
                                </div>
                                <div>
                                    <div class="profile-dropdown-item-label">Logout</div>
                                    <div class="profile-dropdown-item-desc">Sign out of your account</div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay-modern" id="sidebarOverlay"></div>

    <!-- Main Content -->
    <div class="main-content-modern">
        <!-- Top Header -->
        <header class="top-header-modern">
            <div class="d-flex align-items-center gap-3">
                <button class="mobile-menu-btn d-lg-none" id="openSidebar">
                    <i class="bi bi-list fs-5"></i>
                </button>
                <div class="header-greeting">
                    <h4><span class="emoji">ðŸ‘‹</span> Good @(DateTime.Now.Hour < 12 ? "Morning" : DateTime.Now.Hour < 17 ? "Afternoon" : "Evening"), @name!</h4>
                </div>
            </div>
            <div class="header-actions">
                <div class="dropdown">
                    <div class="notification-bell" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bell-fill"></i>
                        <span class="notification-badge d-none" id="notifCount">0</span>
                    </div>
                    <div class="dropdown-menu dropdown-menu-end notif-dropdown" onclick="event.stopPropagation();">
                        <div class="notif-dropdown-header">
                            <div class="d-flex align-items-center gap-2">
                                <div class="notif-header-icon">
                                    <i class="bi bi-bell-fill"></i>
                                </div>
                                <div>
                                    <h6 class="fw-bold mb-0">Notifications</h6>
                                    <small class="text-muted" id="notifSummary">Loading...</small>
                                </div>
                            </div>
                        </div>
                        <ul class="list-unstyled mb-0 notif-dropdown-list" id="notifList">
                        </ul>
                        <div class="notif-dropdown-footer">
                            <a href="#" id="markAllRead"><i class="bi bi-check2-all me-1"></i>Mark all read</a>
                            <a href="@(role == "Admin" ? "/Admin/AdminNotification" : role == "Staff" ? "/Staff/AdminNotification" : "/Owner/OwnerNotification")" class="notif-see-all">See all <i class="bi bi-arrow-right ms-1"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main>
            @RenderBody()
        </main>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        (function () {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const openBtn = document.getElementById('openSidebar');
            const closeBtn = document.getElementById('closeSidebar');
            const notifList = document.getElementById('notifList');
            const notifCount = document.getElementById('notifCount');
            const markAllBtn = document.getElementById('markAllRead');

            // Sidebar toggle for mobile
            function openSidebar() {
                sidebar.classList.add('open');
                overlay.classList.add('active');
                document.body.style.overflow = 'hidden';
            }

            function closeSidebar() {
                sidebar.classList.remove('open');
                overlay.classList.remove('active');
                document.body.style.overflow = '';
            }

            if (openBtn) openBtn.addEventListener('click', openSidebar);
            if (closeBtn) closeBtn.addEventListener('click', closeSidebar);
            if (overlay) overlay.addEventListener('click', closeSidebar);

            document.addEventListener('keydown', e => {
                if (e.key === 'Escape') closeSidebar();
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth > 991) closeSidebar();
            });

            // Notifications
            const role = '@role';
            const baseUrl = role === "Admin" ? "/Admin" : role === "Staff" ? "/Staff" : "/Owner";
            const notifEndpoint = role === "Owner"
                ? '/Owner/GetOwnerNotifications'
                : `${baseUrl}/GetNotifications`;

            const notifSummary = document.getElementById('notifSummary');

            fetch(notifEndpoint)
                .then(res => res.json())
                .then(data => {
                    const notifications = data.notifications || [];
                    const unread = data.totalUnread || 0;

                    if (unread > 0) {
                        notifCount.textContent = unread > 9 ? "9+" : unread;
                        notifCount.classList.remove("d-none");
                        notifSummary.textContent = `${unread} unread notification${unread > 1 ? 's' : ''}`;
                    } else {
                        notifCount.classList.add("d-none");
                        notifSummary.textContent = 'All caught up!';
                    }

                    notifList.innerHTML = '';

                    if (notifications.length === 0) {
                        notifList.innerHTML = `
                            <li class="notif-empty">
                                <i class="bi bi-bell-slash"></i>
                                <p>No notifications yet</p>
                            </li>`;
                        return;
                    }

                    notifications.slice(0, 5).forEach(n => {
                        const iconMap = { 'User': 'bi-person-fill', 'Pet': 'bi-heart-fill', 'Appointment': 'bi-calendar-check-fill' };
                        const colorMap = { 'User': 'primary', 'Pet': 'danger', 'Appointment': 'info' };
                        const icon = iconMap[n.type] || 'bi-bell-fill';
                        const color = colorMap[n.type] || 'primary';

                        notifList.innerHTML += `
                            <li>
                                <a href="#" class="notif-item ${!n.isRead ? 'notif-unread' : ''}"
                                   data-id="${n.notificationID}" data-url="${n.redirectUrl}">
                                    <div class="notif-icon-wrap ${color}">
                                        <i class="bi ${icon}"></i>
                                    </div>
                                    <div class="notif-content">
                                        <p class="notif-message">${n.message}</p>
                                        <span class="notif-time"><i class="bi bi-clock me-1"></i>${n.createdAt}</span>
                                    </div>
                                    ${!n.isRead ? '<span class="notif-dot"></span>' : ''}
                                </a>
                            </li>
                        `;
                    });
                })
                .catch(err => console.error("Error loading notifications:", err));

            if (markAllBtn) {
                markAllBtn.addEventListener("click", function (e) {
                    e.preventDefault();
                    fetch(`${baseUrl}/MarkAllNotificationsRead`, { method: 'POST' })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                notifCount.classList.add("d-none");
                                notifSummary.textContent = 'All caught up!';
                                document.querySelectorAll(".notif-item").forEach(i => {
                                    i.classList.remove("notif-unread");
                                    const dot = i.querySelector('.notif-dot');
                                    if (dot) dot.remove();
                                });
                            }
                        })
                        .catch(err => console.error("Error marking all read:", err));
                });
            }

            document.addEventListener("click", function (e) {
                const item = e.target.closest(".notif-item");
                if (!item) return;

                e.preventDefault();
                const id = item.dataset.id;
                const url = item.dataset.url;

                fetch(`${baseUrl}/MarkNotificationRead/${id}`, { method: "POST" })
                    .finally(() => {
                        if (url && url !== "null") {
                            window.location.href = url;
                        }
                    });
            });
        })();
    </script>
</body>
</html>

