<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PetCloud | @ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .navbar .nav-link {
            color: #1F2937;
            transition: color 0.2s ease;
        }
        .navbar .nav-link:hover,
        .navbar .nav-link:focus {
            color: #10B981 !important;
        }
    </style>
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container-fluid px-3">
            <a class="navbar-brand d-flex align-items-center ms-0" href="/Account/Home">
                <img src="~/images/PetCloud.png" alt="PetCloud Logo" style="max-height:60px;" class="me-2" />
                <span class="navbar-logo">PetCloud</span>
            </a>

            <div class="dropdown ms-auto d-lg-none">
                <button class="btn btn-hamburger" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-list" style="font-size: 1.5rem;"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                    @if (Context.Session.GetString("UserName") != null)
                    {
                        <li><a class="dropdown-item fw-bold" href="#">@Context.Session.GetString("UserName")</a></li>
                        <li><a class="dropdown-item fw-bold" href="/Account/Logout">Logout</a></li>
                    }
                    else
                    {
                        <li><a class="dropdown-item fw-bold" href="/Account/Home">Home</a></li>
                        <li><a class="dropdown-item fw-bold" href="/Account/Login">Sign in</a></li>
                        <li><a class="dropdown-item fw-bold" href="/Account/Register">Sign up</a></li>
                    }
                </ul>
            </div>

            <div class="collapse navbar-collapse justify-content-end d-none d-lg-flex">
                <ul class="navbar-nav d-flex flex-row gap-3">
                    @if (Context.Session.GetString("UserName") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link fw-bold">@Context.Session.GetString("UserName")</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" href="/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link fw-bold" href="/Account/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold" href="/Account/Login">Sign in</a></li>
                        <li class="nav-item"><a class="nav-link fw-bold" href="/Account/Register">Sign up</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>


    <main class="container-fluid p-0">
        @RenderBody()
    </main>
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

