@model PetCloud.Models.SurgeryListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Surgery";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>Surgery Records</h2>
    <p>View surgical procedure records</p>
</div>

<!-- Mobile Search -->
<div class="d-md-none mb-3" style="padding: 0 24px;">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..." value="@Model.SearchQuery" />
        <button type="submit" class="btn btn-add-modern">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Status:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.StatusFilter) ? "All" : Model.StatusFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item status-option" data-value="All" href="#">All</a></li>
            <li><a class="dropdown-item status-option" data-value="Pending" href="#">Pending</a></li>
            <li><a class="dropdown-item status-option" data-value="Missed" href="#">Missed</a></li>
            <li><a class="dropdown-item status-option" data-value="Completed" href="#">Completed</a></li>
            <li><a class="dropdown-item status-option" data-value="Cancelled" href="#">Cancelled</a></li>
        </ul>
    </div>

    <span class="filter-label">Service Type:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.SubtypeFilter) ? "All" : Model.SubtypeFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item subtype-option" data-value="All" href="#">All</a></li>
            @foreach (var subtype in Model.ServiceSubtypes)
            {
                <li><a class="dropdown-item subtype-option" data-value="@subtype" href="#">@subtype</a></li>
            }
        </ul>
    </div>

    <span class="filter-label">Sort:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(ViewBag.SortOrder == "asc" ? "Old to New" : "New to Old")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-option" data-value="asc" href="#">Old to New</a></li>
            <li><a class="dropdown-item sort-option" data-value="desc" href="#">New to Old</a></li>
        </ul>
    </div>

    <div class="search-box d-none d-md-flex">
        <form method="get" class="d-flex">
            <input type="text" name="searchQuery" placeholder="Search..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Records Table -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>SURGERY RECORDS</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Pet Name</th>
                        <th>Service Type</th>
                        <th>Appointment Date</th>
                        <th>Status</th>
                        <th>Administered By</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Surgery != null && Model.Surgery.Any())
                    {
                        @foreach (var appointment in Model.Surgery)
                        {
                            <tr>
                                <td>@appointment.AppointmentID</td>
                                <td>@appointment.Pet?.Name</td>
                                <td>@appointment.ServiceSubtype?.ServiceSubType</td>
                                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (appointment.Status == "Pending")
                                    {
                                        <span class="badge-modern badge-pending">Pending</span>
                                    }
                                    else if (appointment.Status == "Completed")
                                    {
                                        <span class="badge-modern badge-active">Completed</span>
                                    }
                                    else if (appointment.Status == "Cancelled")
                                    {
                                        <span class="badge-modern badge-inactive">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-inactive">@appointment.Status</span>
                                    }
                                </td>
                                <td>@appointment.AdministeredBy</td>
                                <td>@appointment.Notes</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-3">
                                No records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&subtypeFilter={Model.SubtypeFilter}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&subtypeFilter={Model.SubtypeFilter}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            let sortOrder = '@(ViewBag.SortOrder ?? "asc")';
            let statusFilter = '@(Model.StatusFilter ?? "All")';
            let subtypeFilter = '@(Model.SubtypeFilter ?? "All")';
            let searchQuery = '@(Model.SearchQuery ?? "")';

            function reloadPage() {
                const url = `?searchQuery=${encodeURIComponent(searchQuery)}&statusFilter=${encodeURIComponent(statusFilter)}&subtypeFilter=${encodeURIComponent(subtypeFilter)}&sortOrder=${sortOrder}`;
                window.location.href = url;
            }

            $(".status-option").on("click", function (e) {
                e.preventDefault();
                statusFilter = $(this).data("value");
                reloadPage();
            });

            $(".subtype-option").on("click", function (e) {
                e.preventDefault();
                subtypeFilter = $(this).data("value");
                reloadPage();
            });

            $(".sort-option").on("click", function (e) {
                e.preventDefault();
                sortOrder = $(this).data("value");
                reloadPage();
            });
        });
    </script>
}
