@model PetCloud.Models.PetsListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Pets";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>Manage Pets</h2>
    <p>View and manage all registered pets</p>
</div>

<div class="d-md-none mb-3" >
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..."           value="@Model.SearchQuery" />
        <button type="submit" class="btn btn-add-modern">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Type:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.TypeFilter) ? "All" : Model.TypeFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="?typeFilter=All">All</a></li>
            <li><a class="dropdown-item" href="?typeFilter=Cat">Cat</a></li>
            <li><a class="dropdown-item" href="?typeFilter=Dog">Dog</a></li>
        </ul>
    </div>

    <span class="filter-label">Sort by:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortFieldBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortField switch
            {
                "id" => "Pet ID",
                "name" => "Pet Name",
                "date" => "Birthdate",
                _ => "Pet ID"
            })
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-field" data-field="id" href="#">Pet ID</a></li>
            <li><a class="dropdown-item sort-field" data-field="name" href="#">Pet Name</a></li>
            <li><a class="dropdown-item sort-field" data-field="date" href="#">Birthdate</a></li>
        </ul>
    </div>

    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortOrderBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortOrder == "desc" ? "Descending ?" : "Ascending ?")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-order" data-order="asc" href="#">Ascending ?</a></li>
            <li><a class="dropdown-item sort-order" data-order="desc" href="#">Descending ?</a></li>
        </ul>
    </div>

    <div class="search-box">
        <form method="get" class="d-flex">
            <input type="text" name="searchQuery" placeholder="Search pets..." value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Pets Table Card -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>ALL PETS</h6>
        <a href="/Admin/AddPet" class="btn-add-modern">
            <i class="bi bi-plus-lg"></i> Add Pet
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Breed</th>
                        <th>Birthdate</th>
                        <th>Owner</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model.Pets)
                    {
                        <tr>
                            <td>@pet.PetID</td>
                            <td>@pet.Name</td>
                            <td>@pet.Type</td>
                            <td>@pet.Breed</td>
                            <td>@pet.Birthdate.ToShortDateString()</td>
                            <td>@pet.Owner?.Name</td>
                            <td>
                                <a href="/Admin/EditPet/@pet.PetID" class="btn-action btn-edit" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="/Admin/ViewPet/@pet.PetID" class="btn-action btn-view" title="View">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                           href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&typeFilter={Model.TypeFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="?page=1&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           href="?page=@i&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link"
                           href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery&typeFilter=@Model.TypeFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                           href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&typeFilter={Model.TypeFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
                $(function () {
                    let sortField = '@ViewBag.SortField';
                    let sortOrder = '@ViewBag.SortOrder';
                    const searchQuery = '@Model.SearchQuery';
                    const typeFilter = '@Model.TypeFilter';

                    $('.sort-field').on('click', function (e) {
                        e.preventDefault();
                        sortField = $(this).data('field');
                        reloadPage();
                    });

                    $('.sort-order').on('click', function (e) {
                        e.preventDefault();
                        sortOrder = $(this).data('order');
                        reloadPage();
                    });

                    function reloadPage() {
                        const url = `?searchQuery=${encodeURIComponent(searchQuery)}&typeFilter=${encodeURIComponent(typeFilter)}&sortField=${sortField}&sortOrder=${sortOrder}`;
                        window.location.href = url;
                    }
                });
    </script>
}