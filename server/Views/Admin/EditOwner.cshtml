@model PetCloud.Models.Owner
@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Edit Owner";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2><i class="bi bi-pencil-square"></i>Edit Owner</h2>
    <p>Update information for @Model.Name</p>
</div>

<!-- Breadcrumb -->
<div class="breadcrumb-modern mb-4">
    <a href="@Url.Action("Owners", "Admin")"><i class="bi bi-people me-1"></i>All Owners</a>
    <span class="separator">/</span>
    <span class="current">Edit Owner</span>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="messageToast" class="toast toast-modern align-items-center text-white border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body d-flex align-items-center gap-2">
                <i class="bi" id="toastIcon"></i>
                <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8 mx-auto">
        <div class="page-card-modern">
            <div class="card-header-modern">
                <h6><i class="bi bi-clipboard-data me-2"></i>OWNER INFORMATION</h6>
            </div>
            <div class="card-body p-4">
                <form id="editOwnerForm" method="post" action="@Url.Action("EditOwner", "Admin")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="OwnerID" value="@Model.OwnerID" />

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-person me-2"></i>Name
                                </label>
                                <input type="text" name="Name" value="@Model.Name"
                                       class="form-control form-control-modern" placeholder="Enter owner name" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-envelope me-2"></i>Email
                                </label>
                                <input type="email" name="Email" value="@Model.Email"
                                       class="form-control form-control-modern" placeholder="Enter email address" required />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-phone me-2"></i>Phone
                                </label>
                                <input type="tel" name="Phone" id="Phone" value="@Model.Phone"
                                       class="form-control form-control-modern"
                                       placeholder="e.g. 09123456789"
                                       inputmode="numeric" pattern="[0-9]{11}"
                                       minlength="11" maxlength="11" required />
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Owners", "Admin")" class="btn-modern-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to Owners
                        </a>
                        <button type="submit" class="btn-modern-success">
                            <i class="bi bi-check-circle me-1"></i> Update Owner
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modal -->
<div class="modal fade modal-modern" id="confirmModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, #28a745, #20c997);">
                <h6 class="modal-title text-white">
                    <i class="bi bi-pencil-square"></i>
                    Confirm Changes
                </h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-question-circle display-1 text-success opacity-75"></i>
                </div>
                <p class="fw-semibold fs-5 mb-2">Save changes to this owner?</p>
                <small class="text-muted">All modifications will be updated</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-modern-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="confirmSaveBtn" class="btn-modern-success">
                    <i class="bi bi-check2-circle me-1"></i> Yes, Update Owner
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Phone numeric-only
            document.getElementById("Phone").addEventListener("input", function () {
                this.value = this.value.replace(/\D/g, '');
                if (this.value.length > 11) this.value = this.value.slice(0, 11);
            });

            // Toast function
            function showToast(message, isSuccess) {
                const toastEl = $('#messageToast');
                $('#toastMessage').text(message);
                $('#toastIcon').removeClass().addClass('bi ' + (isSuccess ? 'bi-check-circle-fill' : 'bi-exclamation-circle-fill'));
                toastEl.removeClass('toast-success toast-danger').addClass(isSuccess ? 'toast-success' : 'toast-danger');
                new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
            }

            // Form submission
            $('#editOwnerForm').submit(function (e) {
                e.preventDefault();
                const form = this;
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                modal.show();

                $('#confirmSaveBtn').off('click').on('click', function () {
                    const btn = $(this);
                    btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Saving...');
                    modal.hide();

                    var formData = $(form).serialize();

                    $.ajax({
                        url: '@Url.Action("EditOwner", "Admin")',
                        type: 'POST',
                        data: formData,
                        success: function (res) {
                            showToast(res.message, res.success);
                            if (res.success) {
                                setTimeout(() => {
                                    window.location.href = '@Url.Action("Owners", "Admin")';
                                }, 1200);
                            }
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Update Owner');
                        },
                        error: function () {
                            showToast("Something went wrong while saving.", false);
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Update Owner');
                        }
                    });
                });
            });
        });
    </script>
}
