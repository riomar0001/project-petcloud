@model PurrVet.Models.ServiceCategoryListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Service Categories";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>Service Categories</h2>
    <p>View and manage service categories</p>
</div>

<!-- Mobile Search (hidden on desktop) -->
<div class="d-md-none mb-3">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..." value="@Model.SearchQuery" />
        <button type="submit" class="btn btn-add-modern">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Sort by:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortFieldBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortField switch
            {
                "id" => "Category ID",
                "name" => "Service Type",
                "desc" => "Description",
                _ => "Category ID"
            })
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-field" data-field="id" href="#">Category ID</a></li>
            <li><a class="dropdown-item sort-field" data-field="name" href="#">Service Type</a></li>
            <li><a class="dropdown-item sort-field" data-field="desc" href="#">Description</a></li>
        </ul>
    </div>

    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortOrderBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortOrder == "desc" ? "Descending ↓" : "Ascending ↑")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-order" data-order="asc" href="#">Ascending ↑</a></li>
            <li><a class="dropdown-item sort-order" data-order="desc" href="#">Descending ↓</a></li>
        </ul>
    </div>

    <div class="search-box">
        <form method="get" class="d-flex">
            <input type="text" name="searchQuery" placeholder="Search categories..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Service Categories Table Card -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>SERVICE CATEGORIES</h6>
        <a href="/Staff/AddServiceCategory" class="btn-add-modern">
            <i class="bi bi-plus-lg"></i> Add Category
        </a>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Service Type</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.ServiceCategories)
                    {
                        <tr>
                            <td>@category.CategoryID</td>
                            <td>@category.ServiceType</td>
                            <td>@category.Description</td>
                            <td>
                                <a href="/Staff/EditServiceCategory/@category.CategoryID" class="btn-action btn-edit" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&searchQuery=@Model.SearchQuery">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&searchQuery=@Model.SearchQuery">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            let sortField = '@(ViewBag.SortField ?? "id")';
            let sortOrder = '@(ViewBag.SortOrder ?? "asc")';
            const searchQuery = '@(Model.SearchQuery ?? "")';

            $('.sort-field').on('click', function (e) {
                e.preventDefault();
                sortField = $(this).data('field');
                reloadPage();
            });

            $('.sort-order').on('click', function (e) {
                e.preventDefault();
                sortOrder = $(this).data('order');
                reloadPage();
            });

            function reloadPage() {
                const url = `?searchQuery=${encodeURIComponent(searchQuery)}&sortField=${encodeURIComponent(sortField)}&sortOrder=${encodeURIComponent(sortOrder)}`;
                window.location.href = url;
            }
        });
    </script>
}
