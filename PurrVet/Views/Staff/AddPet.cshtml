@model PurrVet.Models.Pet

@{
    ViewBag.Title = "Pets";
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2><i class="bi bi-heart-pulse-fill"></i>Add New Pet</h2>
    <p>Register a new pet to the system</p>
</div>

<!-- Breadcrumb -->
<div class="breadcrumb-modern mb-4">
    <a href="@Url.Action("Pets", "Staff")"><i class="bi bi-grid me-1"></i>All Pets</a>
    <span class="separator">/</span>
    <span class="current">Add New Pet</span>
</div>

<!-- Toast Notification -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="messageToast" class="toast toast-modern align-items-center text-white border-0" role="alert">
        <div class="d-flex">
            <div class="toast-body d-flex align-items-center gap-2">
                <i class="bi" id="toastIcon"></i>
                <span id="toastMessage"></span>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Pet Preview Card -->
    <div class="col-lg-4">
        <div class="page-card-modern">
            <div class="card-header-modern">
                <h6><i class="bi bi-image me-2"></i>PET PREVIEW</h6>
            </div>
            <div class="card-body p-4">
                <div class="pet-profile-preview">
                    <img id="profilePreview" src="@Url.Content("~/uploads/profiles/pet.png")" alt="Pet Preview" />
                    <div class="pet-name" id="previewName">Pet Name</div>
                    <div class="pet-breed" id="previewBreed">Select breed to preview</div>
                </div>
                
                <div class="photo-upload-container mt-4" id="uploadContainer">
                    <i class="bi bi-cloud-arrow-up photo-upload-icon"></i>
                    <p class="photo-upload-text mb-2">
                        <strong>Click to upload</strong> or drag and drop
                    </p>
                    <small class="text-muted">PNG, JPG up to 5MB (min 300x300px)</small>
                    <input type="file" name="Photo" accept="image/*" id="photoInput" form="addPetForm" />
                </div>
            </div>
        </div>
    </div>

    <!-- Pet Information Form -->
    <div class="col-lg-8">
        <div class="page-card-modern">
            <div class="card-header-modern">
                <h6><i class="bi bi-clipboard-data me-2"></i>PET INFORMATION</h6>
            </div>
            <div class="card-body p-4">
                <form id="addPetForm" method="post" enctype="multipart/form-data" action="@Url.Action("AddPet", "Staff")">
                    @Html.AntiForgeryToken()

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-person-fill me-2"></i>
                                    Owner
                                </label>
                                <select name="OwnerID" class="form-select form-select-modern" id="ownerSelect">
                                    <option value="">-- Select Owner --</option>
                                    @foreach (var owner in ViewBag.Owners as List<PurrVet.Models.Owner>)
                                    {
                                        <option value="@owner.OwnerID">@owner.Name (@owner.Email)</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-tag-fill me-2"></i>
                                    Pet Name
                                </label>
                                <input type="text" name="Name" class="form-control form-control-modern" 
                                       placeholder="Enter pet's name" id="nameInput" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-gender-ambiguous me-2"></i>
                                    Pet Type
                                </label>
                                <select name="Type" class="form-select form-select-modern" id="typeSelect">
                                    <option value="">-- Select Type --</option>
                                    <option value="Dog">üêï Dog</option>
                                    <option value="Cat">üêà Cat</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-bookmark-fill me-2"></i>
                                    Breed
                                </label>
                                <select name="Breed" class="form-select form-select-modern" id="breedSelect">
                                    <option value="">-- Select Type First --</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group-modern">
                                <label class="required">
                                    <i class="bi bi-calendar-heart me-2"></i>
                                    Birthdate
                                </label>
                                <input type="date" name="Birthdate" class="form-control form-control-modern" 
                                       id="birthdateInput" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="@Url.Action("Pets", "Staff")" class="btn-modern-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to Pets
                        </a>
                        <button type="submit" class="btn-modern-success">
                            <i class="bi bi-plus-circle me-1"></i> Add Pet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirm Modal -->
<div class="modal fade modal-modern" id="confirmSaveModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title">
                    <i class="bi bi-heart-pulse-fill"></i>
                    Confirm Add Pet
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-question-circle display-1 text-warning opacity-75"></i>
                </div>
                <p class="fw-semibold fs-5 mb-2">Add this pet to the system?</p>
                <small class="text-muted">Please verify all information is correct</small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-modern-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <button type="button" id="confirmSaveBtn" class="btn-modern-success">
                    <i class="bi bi-check2-circle me-1"></i> Yes, Add Pet
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2
            $('#typeSelect, #ownerSelect, #breedSelect').select2({
                placeholder: "-- Select --",
                allowClear: true,
                width: '100%'
            });

            // Update preview name in real-time
            $('#nameInput').on('input', function() {
                const name = $(this).val().trim() || 'Pet Name';
                $('#previewName').text(name);
            });

            // Load breeds when type changes
            $('#typeSelect').on('change', function () {
                var type = $(this).val();
                var breedSelect = $('#breedSelect');
                breedSelect.empty().append('<option value="">-- Select Breed --</option>');
                $('#previewBreed').text('Select breed to preview');

                if (!type) return;

                $.ajax({
                    url: '@Url.Action("GetBreeds", "Staff")',
                    type: 'GET',
                    data: { type: type },
                    success: function (breeds) {
                        $.each(breeds, function (i, breed) {
                            breedSelect.append('<option value="' + breed + '">' + breed + '</option>');
                        });
                        breedSelect.val(null).trigger('change');
                    }
                });
            });

            // Update preview breed
            $('#breedSelect').on('change', function() {
                const breed = $(this).val();
                const type = $('#typeSelect').val();
                if (breed) {
                    $('#previewBreed').text(type + ' ‚Ä¢ ' + breed);
                } else {
                    $('#previewBreed').text('Select breed to preview');
                }
            });

            // Toast function
            function showToast(message, isSuccess) {
                const toastEl = $('#messageToast');
                const toastMessage = $('#toastMessage');
                const toastIcon = $('#toastIcon');
                
                toastMessage.text(message);
                toastIcon.removeClass().addClass('bi ' + (isSuccess ? 'bi-check-circle-fill' : 'bi-exclamation-circle-fill'));
                toastEl.removeClass('toast-success toast-danger').addClass(isSuccess ? 'toast-success' : 'toast-danger');
                
                new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
            }

            // Photo upload handling
            const uploadContainer = $('#uploadContainer');
            const photoInput = $('#photoInput');
            const profilePreview = $('#profilePreview');
            
            uploadContainer.on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('drag-over');
            });
            
            uploadContainer.on('dragleave drop', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
            });
            
            uploadContainer.on('drop', function(e) {
                const files = e.originalEvent.dataTransfer.files;
                if (files.length) {
                    photoInput[0].files = files;
                    photoInput.trigger('change');
                }
            });

            photoInput.on("change", function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (event) {
                        profilePreview.attr("src", event.target.result);
                    };
                    reader.readAsDataURL(file);
                } else {
                    profilePreview.attr("src", "@Url.Content("~/uploads/profiles/pet.png")");
                }
            });

            // Form submission
            $('#addPetForm').submit(function (e) {
                e.preventDefault();
                const form = this;
                const modal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));
                modal.show();

                $('#confirmSaveBtn').off('click').on('click', function () {
                    const btn = $(this);
                    btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Adding...');
                    
                    modal.hide();
                    const formData = new FormData(form);

                    $.ajax({
                        url: '@Url.Action("AddPet", "Staff")',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (res) {
                            showToast(res.message, res.success);
                            if (res.success) {
                                setTimeout(() => {
                                    window.location.href = '@Url.Action("Pets", "Staff")';
                                }, 1200);
                            }
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Add Pet');
                        },
                        error: function() {
                            showToast("Something went wrong. Please try again.", false);
                            btn.prop('disabled', false).html('<i class="bi bi-check2-circle me-1"></i> Yes, Add Pet');
                        }
                    });
                });
            });
        });
    </script>
}
