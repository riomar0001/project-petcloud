@model PetCloud.Models.LogListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Logs";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>System Logs</h2>
    <p>View system activity logs</p>
</div>

<!-- Mobile Search (hidden on desktop) -->
<div class="d-md-none mb-3">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
               value="@Model.SearchQuery" />
        <button type="submit" class="btn btn-add-modern">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Type:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.TypeFilter) ? "All" : Model.TypeFilter)
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item"
                   href="?typeFilter=All&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    All
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?typeFilter=Create&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Create
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?typeFilter=Update&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Update
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?typeFilter=Delete&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Delete
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?typeFilter=Login&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Login
                </a>
            </li>
        </ul>
    </div>

    <span class="filter-label">Module:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.ModuleFilter) ? "All" : Model.ModuleFilter)
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item"
                   href="?moduleFilter=All&typeFilter=@Model.TypeFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    All
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?moduleFilter=User&typeFilter=@Model.TypeFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    User
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?moduleFilter=Pet&typeFilter=@Model.TypeFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Pet
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?moduleFilter=Service&typeFilter=@Model.TypeFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Service
                </a>
            </li>
            <li>
                <a class="dropdown-item"
                   href="?moduleFilter=Appointment&typeFilter=@Model.TypeFilter&searchQuery=@Model.SearchQuery&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">
                    Appointment
                </a>
            </li>
        </ul>
    </div>

    <span class="filter-label">Sort by:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(ViewBag.SortField switch
            {
                "action" => "Action",
                "module" => "Module",
                "performedby" => "Performed By",
                "timestamp" => "Date",
                _ => "Date"
            })
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-field" data-field="action" href="#">Action</a></li>
            <li><a class="dropdown-item sort-field" data-field="module" href="#">Module</a></li>
            <li><a class="dropdown-item sort-field" data-field="performedby" href="#">Performed By</a></li>
            <li><a class="dropdown-item sort-field" data-field="timestamp" href="#">Date</a></li>
        </ul>
    </div>

    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(ViewBag.SortOrder == "desc" ? "Descending ↓" : "Ascending ↑")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-order" data-order="asc" href="#">Ascending ↑</a></li>
            <li><a class="dropdown-item sort-order" data-order="desc" href="#">Descending ↓</a></li>
        </ul>
    </div>

    <div class="search-box">
        <form method="get" class="d-flex">
            <input type="text" name="searchQuery" placeholder="Search logs..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Logs Table Card -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>SYSTEM LOGS</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Module</th>
                        <th>Description</th>
                        <th>Performed By</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Logs != null && Model.Logs.Any())
                    {
                        foreach (var log in Model.Logs)
                        {
                            <tr>
                                <td>@log.ActionType</td>
                                <td>@log.Module</td>
                                <td class="text-wrap">@log.Description</td>
                                <td>@log.PerformedBy</td>
                                <td>@log.Timestamp.ToString("MMM dd, yyyy hh:mm tt")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">
                                No logs found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&typeFilter={Model.TypeFilter}&moduleFilter={Model.ModuleFilter}&searchQuery={Model.SearchQuery}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&typeFilter=@Model.TypeFilter&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&typeFilter=@Model.TypeFilter&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&typeFilter=@Model.TypeFilter&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&typeFilter=@Model.TypeFilter&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages&typeFilter=@Model.TypeFilter&moduleFilter=@Model.ModuleFilter&searchQuery=@Model.SearchQuery">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&typeFilter={Model.TypeFilter}&moduleFilter={Model.ModuleFilter}&searchQuery={Model.SearchQuery}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="messageToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmClearModal" tabindex="-1" aria-labelledby="confirmClearModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header" style="background: var(--primary-green, #10B981); color: white;">
                <h6 class="modal-title fw-bold" id="confirmClearModalLabel">System Logs</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="mb-0 fw-semibold">Are you sure you want to clear all logs?</p>
            </div>
            <div class="modal-footer d-flex justify-content-end">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmClearBtn" class="btn btn-danger px-4">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var toastEl = $('#messageToast');
            var toastBody = toastEl.find('.toast-body');
            const confirmModal = new bootstrap.Modal(document.getElementById('confirmClearModal'));

            $('#clearLogsBtn').off('click').on('click', function (e) {
                e.preventDefault();
                confirmModal.show();
            });

            $('#confirmClearBtn').off('click').on('click', function () {
                confirmModal.hide();

                $.ajax({
                    url: '@Url.Action("ClearLogs", "Staff")',
                    type: 'POST',
                    success: function (res) {
                        toastBody.text(res.message);
                        toastEl.removeClass('bg-success bg-danger')
                                .addClass(res.success ? 'bg-success' : 'bg-danger');

                        new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();

                        if (res.success) {
                            setTimeout(() => location.reload(), 1500);
                        }
                    },
                    error: function () {
                        toastBody.text("An error occurred while clearing logs.");
                        toastEl.removeClass('bg-success').addClass('bg-danger');
                        new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
                    }
                });
            });
        });

        $(function () {
            let sortField = '@ViewBag.SortField';
            let sortOrder = '@ViewBag.SortOrder';
            const searchQuery = '@Model.SearchQuery';
            const typeFilter = '@Model.TypeFilter';
            const moduleFilter = '@Model.ModuleFilter';

            $('.sort-field').on('click', function (e) {
                e.preventDefault();
                sortField = $(this).data('field');
                reloadPage();
            });

            $('.sort-order').on('click', function (e) {
                e.preventDefault();
                sortOrder = $(this).data('order');
                reloadPage();
            });

            function reloadPage() {
                const url = `?searchQuery=${encodeURIComponent(searchQuery)}&typeFilter=${typeFilter}&moduleFilter=${moduleFilter}&sortField=${sortField}&sortOrder=${sortOrder}`;
                window.location.href = url;
            }
        });
    </script>
}
