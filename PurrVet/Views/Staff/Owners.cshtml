@model PurrVet.Models.OwnerListViewModel
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Owners";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}
<div class="d-md-none px-3 mb-2">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
               value="@Model.SearchQuery" />
        <button type="submit" class="btn" style="background-color:#559DD4; color:white;">
            <i class="bi bi-search"></i>
        </button>
    </form>

    <button class="btn text-black w-100 fw-semibold" id="toggleFilter" style="background-color:#FFB100;">
        <i class="bi bi-funnel"></i> Filters
    </button>
</div>
<div id="filterSection" class="filter-mobile d-flex flex-wrap align-items-center justify-content-start px-3 py-2 mb-3" style="background-color:#FFD392;">
    <span class="fw-semibold me-2">Filter Status:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                style="background-color:#FFB100;">
            @(string.IsNullOrEmpty(Model.StatusFilter) || Model.StatusFilter == "All" ? "All" : Model.StatusFilter)
        </button>
        <ul class="dropdown-menu statusfiltering">
            <li><a class="dropdown-item text-black" href="?statusFilter=All">All</a></li>
            <li><a class="dropdown-item text-black" href="?statusFilter=Active">Active</a></li>
            <li><a class="dropdown-item text-black" href="?statusFilter=Inactive">Inactive</a></li>
        </ul>
    </div>

    <span class="fw-semibold me-2">Sort by:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                style="background-color:#FFB100;">
            @(ViewBag.SortField switch
                {
                    "id" => "Owner ID",
                    "name" => "Name",
                    "email" => "Email",
                    "phone" => "Phone",
                    _ => "Owner ID"
                })
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-black sort-field" data-field="name" href="#">Name</a></li>
            <li><a class="dropdown-item text-black sort-field" data-field="email" href="#">Email</a></li>
            <li><a class="dropdown-item text-black sort-field" data-field="phone" href="#">Phone</a></li>
        </ul>
    </div>

    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                style="background-color:#FFB100;">
            @(ViewBag.SortOrder == "desc" ? "Descending (↓)" : "Ascending (↑)")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-black sort-order" data-order="asc" href="#">Ascending (↑)</a></li>
            <li><a class="dropdown-item text-black sort-order" data-order="desc" href="#">Descending (↓)</a></li>
        </ul>
    </div>

    <form method="get" class="d-none d-md-flex justify-content-end flex-grow-1">
        <div class="input-group" style="max-width:300px;">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn" style="background-color:#559DD4; color:white;">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h6 class="fw-bold mb-0"> MANAGE OWNERS</h6>
                <!-- <a href="~/Admin/AddUser" class="btn text-white" style="background-color:#559DD4;">
         + Add Owner
     </a> -->
            </div>
            <div class="table-responsive">
                <table class="table align-middle text-center border">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var owner in Model.Owners)
                        {
                            <tr>
                                <td>@owner.OwnerID</td>
                                <td>@owner.Name</td>
                                <td>@owner.Email</td>
                                <td>@owner.Phone</td>
                                <td>
                                    @if (owner.User?.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                            </td>
                            <td>
                                <a href="@Url.Action("EditOwner", "Staff", new { id = owner.OwnerID })" class="btn btn-sm btn-edit" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="~/Staff/ViewOwner/@owner.OwnerID" class="btn btn-sm btn-view" title="View">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>

            <nav class="mt-3">
                <ul class="pagination justify-content-center mb-0">

                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">‹</a>
                    </li>

                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?page=1&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link fw-bold border-0 text-dark"
                               href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                        </li>
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link rounded-circle border-0 text-black"
                                   style="background-color:#FFB100;width:32px;height:32px;display:flex;align-items:center;justify-content:center;">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link rounded-circle border-0 text-dark"
                                   style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                                   href="?page=@i&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@i</a>
                            </li>
                        }
                    }

                    @if (endPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link fw-bold border-0 text-dark"
                               href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@Model.TotalPages</a>
                        </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">›</a>
                    </li>

                </ul>
            </nav>
        </div>
    </div>
<script>
    $(function () {
        let sortField = '@ViewBag.SortField';
        let sortOrder = '@ViewBag.SortOrder';
        const searchQuery = '@Model.SearchQuery';
        const statusFilter = '@Model.StatusFilter';

        $('.sort-field').on('click', function (e) {
            e.preventDefault();
            sortField = $(this).data('field');
            reloadPage();
        });

        $('.sort-order').on('click', function (e) {
            e.preventDefault();
            sortOrder = $(this).data('order');
            reloadPage();
        });

        function reloadPage() {
            const url = `?searchQuery=${encodeURIComponent(searchQuery)}&statusFilter=${statusFilter}&sortField=${sortField}&sortOrder=${sortOrder}`;
            window.location.href = url;
        }
    });
    document.addEventListener("DOMContentLoaded", function () {
        const toggleBtn = document.getElementById("toggleFilter");
        const filterSection = document.getElementById("filterSection");
        if (toggleBtn && filterSection) {
            toggleBtn.addEventListener("click", function () {
                filterSection.classList.toggle("active");
            });
        }
    });
</script>