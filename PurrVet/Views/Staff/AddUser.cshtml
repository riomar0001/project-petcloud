@model PurrVet.Models.User

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="p-4">
    <h5 class="mb-4 fw-bold">Users / Add User</h5>
    <div class="card shadow-sm p-4">

        <!-- Toast -->
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
            <div id="messageToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"></div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>

        <h4 class="mb-3 fw-bold">Add a New User</h4>
        <hr class="mb-4">

        <form id="addUserForm" method="post" enctype="multipart/form-data" action="@Url.Action("AddUser","Staff")">
            @Html.AntiForgeryToken()

            <div class="d-flex flex-column align-items-center mb-3">
                <div class="d-flex justify-content-center mb-2">
                    <img id="profilePreview"
                         src="@Url.Content(Model?.ProfileImage ?? "~/uploads/profiles/pet.png")"
                         class="rounded-circle border border-4 border-warning shadow"
                         style="width:170px; height:170px; object-fit:cover;"
                         onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
                </div>
                <input type="file"
                       name="ProfileImage"
                       id="ProfileImage"
                       class="form-control mt-2"
                       accept="image/*"
                       style="max-width:250px;" />
            </div>


            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">First Name</label>
                    <input type="text" name="FirstName" class="form-control" placeholder="Enter first name" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Last Name</label>
                    <input type="text" name="LastName" class="form-control" placeholder="Enter last name" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter email" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Phone</label>
                    <input type="tel"
                           name="Phone"
                           id="Phone"
                           class="form-control"
                           placeholder="e.g. 09123456789"
                           inputmode="numeric"
                           pattern="[0-9]{11}"
                           minlength="11"
                           maxlength="11"
                           required />                
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Password</label>
                    <div class="position-relative">
                        <input type="password" name="Password" id="userPassword" class="form-control" placeholder="Enter password" />

                        <span id="toggleUserPassword"
                              class="position-absolute top-50 end-0 translate-middle-y me-3"
                              style="cursor:pointer; font-size:12px; color:#666;">
                            <i id="userEyeIcon" class="fa-solid fa-eye"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-semibold">Type</label>
                    <select name="Type" class="form-select">
                        <option value="">-- Select Type --</option>
                        <option>Admin</option>
                        <option>Staff</option>
                        <option>Owner</option>
                    </select>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary px-4">Save</button>
                <a href="@Url.Action("Users", "Staff")" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmSaveModal" tabindex="-1" aria-labelledby="confirmSaveModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h6 class="modal-title fw-bold" id="confirmSaveModalLabel">Users</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <p class="mb-0 fw-semibold">Are you sure you want to add this user?</p>
                </div>
                <div class="modal-footer d-flex justify-content-end">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" id="confirmSaveBtn" class="btn btn-success px-4">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var toastEl = $('#messageToast');
            var toastBody = toastEl.find('.toast-body');
            $("#toggleUserPassword").click(function () {
                const input = $("#userPassword");
                const icon = $("#userEyeIcon");
                const hidden = input.attr("type") === "password";

                input.attr("type", hidden ? "text" : "password");
                icon.toggleClass("fa-eye fa-eye-slash");
            });

            $('#ProfileImage').on('change', function (e) {
                const [file] = e.target.files;
                if (file) $('#profilePreview').attr('src', URL.createObjectURL(file));
            });

            $('#addUserForm').submit(function (e) {
                e.preventDefault();
                const form = this;
                const modal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));
                modal.show();

                $('#confirmSaveBtn').off('click').on('click', function () {
                    modal.hide();

                    var formData = new FormData(form);
                    $.ajax({
                        url: '@Url.Action("AddUser", "Staff")',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (res) {
                            toastBody.text(res.message);
                            toastEl.removeClass('bg-success bg-danger').addClass(res.success ? 'bg-success' : 'bg-danger');
                            new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();

                            if (res.success) {
                                $(form)[0].reset();
                                $('#profilePreview').attr('src', '/images/default-profile.png');
                                setTimeout(() => { window.location.href = '@Url.Action("Users", "Staff")'; }, 1200);
                            }
                        }
                    });
                });
            });
        });
        document.getElementById("Phone").addEventListener("input", function () {
            this.value = this.value.replace(/\D/g, '');

            if (this.value.length > 11) {
                this.value = this.value.slice(0, 11);
            }
        });
    </script>
}
