@model PurrVet.Models.ServiceCategory

@{
    ViewBag.Title = "Edit Service Category";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="p-4">
    <h5 class="mb-4 fw-bold">Services / Edit Category</h5>
    <div class="card shadow-sm p-4">

        <!-- Toast -->
        <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
            <div id="messageToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"></div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            </div>
        </div>

        <h4 class="mb-3 fw-bold">Edit Service Category</h4>
        <hr class="mb-4">

        <form id="editCategoryForm" method="post" action="@Url.Action("EditServiceCategory", "Admin")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />

            <div class="mb-3">
                <label class="form-label fw-semibold">Service Type</label>
                <input type="text" name="ServiceType" class="form-control" value="@Model.ServiceType" required maxlength="100" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Description</label>
                <textarea name="Description" class="form-control">@Model.Description</textarea>
            </div>

            <div class="mt-4 d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary px-4">Update</button>
                <a href="@Url.Action("ServiceCategory", "Admin")" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmUpdateModal" tabindex="-1" aria-labelledby="confirmUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h6 class="modal-title fw-bold" id="confirmUpdateModalLabel">Service Category</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p class="mb-0 fw-semibold">Are you sure you want to update this category?</p>
            </div>
            <div class="modal-footer d-flex justify-content-end">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmUpdateBtn" class="btn btn-success px-4">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#editCategoryForm').on('submit', function (e) {
                e.preventDefault();
                const form = this;
                const modal = new bootstrap.Modal('#confirmUpdateModal');
                modal.show();

                $('#confirmUpdateBtn').off('click').on('click', function () {
                    modal.hide();
                    $.post('@Url.Action("EditServiceCategory", "Admin")', $(form).serialize())
                        .done(res => {
                            const toastEl = $('#messageToast');
                            const toastBody = toastEl.find('.toast-body');
                            toastBody.text(res.message);
                            toastEl.removeClass('bg-success bg-danger')
                                .addClass(res.success ? 'bg-success' : 'bg-danger');
                            new bootstrap.Toast(toastEl[0]).show();

                            if (res.success) setTimeout(() =>
                                window.location.href = '@Url.Action("ServiceCategory", "Admin")', 1200);
                        });
                });
            });
        });
    </script>
}
