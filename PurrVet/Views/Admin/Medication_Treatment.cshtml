@model PurrVet.Models.MedicationTreatmentListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Medication & Treatment";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<div class="d-md-none px-3">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..." value="@Model.SearchQuery" />
        <button type="submit" class="btn" style="background-color:#559DD4; color:white;">
            <i class="bi bi-search"></i>
        </button>
    </form>

    <button class="btn text-black w-100 fw-semibold" id="toggleFilter" style="background-color:#FFB100;">
        <i class="bi bi-funnel"></i> Filters
    </button>
</div>

<div id="filterSection" class="filter-mobile d-flex flex-wrap align-items-center justify-content-start px-3 py-2" style="background-color:#FFD392;">
    <span class="fw-semibold me-2">Filter Status:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown" style="background-color:#FFB100;">
            @(string.IsNullOrEmpty(Model.StatusFilter) ? "All" : Model.StatusFilter)
        </button>
        <ul class="dropdown-menu statusfiltering">
            <li><a class="dropdown-item text-black status-option" data-value="All">All</a></li>
            <li><a class="dropdown-item text-black status-option" data-value="Pending">Pending</a></li>
            <li><a class="dropdown-item text-black status-option" data-value="Missed">Missed</a></li>
            <li><a class="dropdown-item text-black status-option" data-value="Completed">Completed</a></li>
            <li><a class="dropdown-item text-black status-option" data-value="Cancelled">Cancelled</a></li>
        </ul>
    </div>

    <span class="fw-semibold me-2">Filter Service Type:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown" style="background-color:#FFB100;">
            @(string.IsNullOrEmpty(Model.SubtypeFilter) ? "All" : Model.SubtypeFilter)
        </button>
        <ul class="dropdown-menu statusfiltering">
            <li><a class="dropdown-item text-black subtype-option" data-value="All">All</a></li>
            @foreach (var subtype in Model.ServiceSubtypes)
            {
                <li><a class="dropdown-item text-black subtype-option" data-value="@subtype">@subtype</a></li>
            }
        </ul>
    </div>

    <span class="fw-semibold me-2">Sort by Date:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown" style="background-color:#FFB100;">
            @(ViewBag.SortOrder == "asc" ? "Old to New" : "New to Old")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-black sort-option" data-value="asc">Old to New</a></li>
            <li><a class="dropdown-item text-black sort-option" data-value="desc">New to Old</a></li>
        </ul>
    </div>
    <form method="get" class="d-none d-md-flex justify-content-end flex-grow-1">
        <div class="input-group" style="max-width:300px;">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn" style="background-color:#559DD4; color:white;">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="fw-bold mb-0 text-uppercase">
                Medication & Treatment Records
            </h6>
        </div>

        <div class="table-responsive">
            <table class="table align-middle text-center border">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Pet Name</th>
                        <th>Service Type</th>
                        <th>Appointment Date</th>
                        <th>Status</th>
                        <th>Administered By</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.MedicationTreatment != null && Model.MedicationTreatment.Any())
                    {
                        @foreach (var appointment in Model.MedicationTreatment)
                        {
                            <tr>
                                <td>@appointment.AppointmentID</td>
                                <td>@appointment.Pet?.Name</td>
                                <td>@appointment.ServiceSubtype?.ServiceSubType</td>
                                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (appointment.Status == "Pending")
                                    {
                                        <span class="badge bg-primary">Pending</span>
                                    }
                                    else if (appointment.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (appointment.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@appointment.Status</span>
                                    }
                                </td>
                                <td>@appointment.AdministeredBy</td>
                                <td>@appointment.Notes</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-3">
                                No records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav class="mt-3">
            <ul class="pagination justify-content-center mb-0">

                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0 text-dark"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&subtypeFilter={Model.SubtypeFilter}&sortOrder={ViewBag.SortOrder}")">‹</a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link rounded-circle border-0 text-dark"
                           style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                           href="?page=1&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">1</a>
                    </li>

                    <li class="page-item">
                        <a class="page-link border-0 text-dark fw-bold"
                           href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <a class="page-link rounded-circle border-0 text-black"
                               style="background-color:#FFB100;width:32px;height:32px;display:flex;align-items:center;justify-content:center;">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?page=@i&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">@i</a>
                        </li>
                    }
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link border-0 text-dark fw-bold"
                           href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>

                    <li class="page-item">
                        <a class="page-link rounded-circle border-0 text-dark"
                           style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                           href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&subtypeFilter=@Model.SubtypeFilter&sortOrder=@ViewBag.SortOrder">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0 text-dark"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&subtypeFilter={Model.SubtypeFilter}&sortOrder={ViewBag.SortOrder}")">›</a>
                </li>

            </ul>
        </nav>
    </div>
</div>
@section Scripts {
    <script>
        $(function () {
            let sortOrder = '@(ViewBag.SortOrder ?? "asc")';
            let statusFilter = '@(Model.StatusFilter ?? "All")';
            let subtypeFilter = '@(Model.SubtypeFilter ?? "All")';
            let searchQuery = '@(Model.SearchQuery ?? "")';

            function reloadPage() {
                const url = `?searchQuery=${encodeURIComponent(searchQuery)}&statusFilter=${encodeURIComponent(statusFilter)}&subtypeFilter=${encodeURIComponent(subtypeFilter)}&sortOrder=${sortOrder}`;
                window.location.href = url;
            }

            $(".status-option").on("click", function (e) {
                e.preventDefault();
                statusFilter = $(this).data("value");
                reloadPage();
            });

            $(".subtype-option").on("click", function (e) {
                e.preventDefault();
                subtypeFilter = $(this).data("value");
                reloadPage();
            });

            $(".sort-option").on("click", function (e) {
                e.preventDefault();
                sortOrder = $(this).data("value");
                reloadPage();
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggleFilter");
            const filterSection = document.getElementById("filterSection");
            if (toggleBtn && filterSection) {
                toggleBtn.addEventListener("click", function () {
                    filterSection.classList.toggle("active");
                });
            }
        });
    </script>
}
