@model PetCloud.Models.AppointmentListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Manage Appointments";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>Manage Appointments</h2>
    <p>View and manage all appointments</p>
</div>

<!-- Mobile Search (hidden on desktop) -->
<div class="d-md-none mb-3">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..." value="@Model.SearchQuery" />
        <button type="submit" class="btn btn-add-modern">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Status:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @(string.IsNullOrEmpty(Model.StatusFilter) ? "All" : Model.StatusFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="?statusFilter=All">All</a></li>
            <li><a class="dropdown-item" href="?statusFilter=Pending">Pending</a></li>
            <li><a class="dropdown-item" href="?statusFilter=Completed">Completed</a></li>
            <li><a class="dropdown-item" href="?statusFilter=Cancelled">Cancelled</a></li>
            <li><a class="dropdown-item" href="?statusFilter=Missed">Missed</a></li>
        </ul>
    </div>

    <span class="filter-label">Sort by:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortFieldBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortField switch
            {
                "id" => "Appointment ID",
                "owner" => "Owner Name",
                _ => "Date"
            })
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-field" data-field="date" href="#">Date</a></li>
            <li><a class="dropdown-item sort-field" data-field="id" href="#">Appointment ID</a></li>
            <li><a class="dropdown-item sort-field" data-field="owner" href="#">Owner Name</a></li>
        </ul>
    </div>

    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="sortOrderBtn" data-bs-toggle="dropdown">
            @(ViewBag.SortOrder == "desc" ? "Descending ↓" : "Ascending ↑")
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item sort-order" data-order="asc" href="#">Ascending ↑</a></li>
            <li><a class="dropdown-item sort-order" data-order="desc" href="#">Descending ↓</a></li>
        </ul>
    </div>

    <div class="search-box">
        <form method="get" class="d-flex">
            <input type="text" name="searchQuery" placeholder="Search appointments..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Appointments Table Card -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>MANAGE APPOINTMENTS</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Owner</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Appointments != null && Model.Appointments.Any())
                    {
                        foreach (var appt in Model.Appointments)
                        {
                            <tr>
                                <td>@appt.AppointmentID</td>
                                <td>@appt.Pet?.Owner?.Name</td>
                                <td>@appt.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (appt.Status == "Pending")
                                    {
                                        <span class="badge-modern badge-pending">Pending</span>
                                    }
                                    else if (appt.Status == "Completed")
                                    {
                                        <span class="badge-modern badge-active">Completed</span>
                                    }
                                    else if (appt.Status == "Cancelled")
                                    {
                                        <span class="badge-modern badge-inactive">Cancelled</span>
                                    }
                                    else
                                    {
                                        <span class="badge-modern badge-inactive">@appt.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-muted">No appointments found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=1&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?page=@Model.TotalPages&searchQuery=@Model.SearchQuery&statusFilter=@Model.StatusFilter&sortField=@ViewBag.SortField&sortOrder=@ViewBag.SortOrder">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&statusFilter={Model.StatusFilter}&sortField={ViewBag.SortField}&sortOrder={ViewBag.SortOrder}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            let sortField = '@(ViewBag.SortField ?? "date")';
            let sortOrder = '@(ViewBag.SortOrder ?? "asc")';
            let searchQuery = '@(Model.SearchQuery ?? "")';
            let statusFilter = '@(Model.StatusFilter ?? "All")';

            $('.sort-field').on('click', function (e) {
                e.preventDefault();
                sortField = $(this).data('field');
                reloadPage();
            });

            $('.sort-order').on('click', function (e) {
                e.preventDefault();
                sortOrder = $(this).data('order');
                reloadPage();
            });

            function reloadPage() {
                const url = `?searchQuery=${encodeURIComponent(searchQuery)}&statusFilter=${encodeURIComponent(statusFilter)}&sortField=${sortField}&sortOrder=${sortOrder}`;
                window.location.href = url;
            }
        });
    </script>
}
