@model PurrVet.Models.PetDetailsViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Pets";

    var categories = ViewBag.Categories as List<PurrVet.Models.ServiceCategory>;
    var selectedCategory = Model.CategoryFilter.HasValue
        ? categories?.FirstOrDefault(c => c.CategoryID == Model.CategoryFilter)?.ServiceType ?? "All"
        : "All";
    var fallback = Url.Content("~/uploads/profiles/pet.png");
    var photoPath = string.IsNullOrEmpty(Model.Pet.PhotoPath)
        ? fallback
        : Url.Content(Model.Pet.PhotoPath);
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
    
    var petTypeIcon = Model.Pet.Type == "Dog" ? "üêï" : Model.Pet.Type == "Cat" ? "üêà" : "üêæ";
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2><i class="bi bi-heart-pulse-fill"></i>@Model.Pet.Name</h2>
    <p>View pet information and appointment history</p>
</div>

<!-- Breadcrumb -->
<div class="breadcrumb-modern mb-4">
    <a href="@Url.Action("Pets", "Admin")"><i class="bi bi-grid me-1"></i>All Pets</a>
    <span class="separator">/</span>
    <span class="current">@Model.Pet.Name</span>
</div>

<!-- Navigation Pills -->
<div class="filter-bar-modern mb-4">
    <div class="d-flex align-items-center gap-2">
        <a href="@Url.Action("ViewPet", "Admin", new { id = Model.Pet.PetID })"
           class="btn-modern-primary">
            <i class="bi bi-info-circle me-1"></i> Pet Info
        </a>
        <a href="@Url.Action("PetCard", "Admin", new { id = Model.Pet.PetID })"
           class="btn-modern-secondary">
            <i class="bi bi-card-heading me-1"></i> Pet Card
        </a>
    </div>
</div>

<!-- Basic Information Card -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6><i class="bi bi-clipboard-data me-2"></i>BASIC INFORMATION</h6>
    </div>
    <div class="card-body p-4">
        <div class="row g-4 align-items-center">
            <div class="col-md-3 text-center">
                <div class="pet-profile-preview">
                    <img src="@photoPath"
                         alt="@Model.Pet.Name"
                         onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
                    <div class="pet-name">@Model.Pet.Name</div>
                    <div class="pet-breed">@petTypeIcon @Model.Pet.Type ‚Ä¢ @Model.Pet.Breed</div>
                </div>
            </div>
            <div class="col-12 col-md-9 mt-3 mt-md-0">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-hash me-2"></i>Pet ID</div>
                            <div class="info-value">@Model.Pet.PetID</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-person me-2"></i>Owner ID</div>
                            <div class="info-value">@Model.Pet.OwnerID</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-tag me-2"></i>Pet Name</div>
                            <div class="info-value">@Model.Pet.Name</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-gender-ambiguous me-2"></i>Type</div>
                            <div class="info-value">@petTypeIcon @Model.Pet.Type</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-bookmark me-2"></i>Breed</div>
                            <div class="info-value">@Model.Pet.Breed</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item-modern">
                            <div class="info-label"><i class="bi bi-calendar-heart me-2"></i>Age</div>
                            <div class="info-value">@Model.AgeInMonths</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern">
    <span class="filter-label">Category:</span>
    <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
            @selectedCategory
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="?id=@Model.Pet.PetID&categoryFilter=">All</a></li>
            @if (categories != null)
            {
                foreach (var cat in categories)
                {
                    <li><a class="dropdown-item" href="?id=@Model.Pet.PetID&categoryFilter=@cat.CategoryID">@cat.ServiceType</a></li>
                }
            }
        </ul>
    </div>

    <div class="search-box">
        <form method="get" class="d-flex">
            <input type="hidden" name="id" value="@Model.Pet.PetID" />
            <input type="text" name="searchQuery" placeholder="Search appointments..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn-search">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>
</div>

<!-- Appointment Records -->
<div class="page-card-modern">
    <div class="card-header-modern">
        <h6>APPOINTMENT RECORDS</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table-modern-list">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                        <th>Subtype</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Appointments.Any())
                    {
                        foreach (var appt in Model.Appointments)
                        {
                            <tr>
                                <td>@appt.AppointmentID</td>
                                <td>@appt.ServiceCategory?.ServiceType</td>
                                <td>@appt.ServiceSubtype?.ServiceSubType</td>
                                <td>@appt.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td>
                                    @switch (appt.Status)
                                    {
                                        case "Pending":
                                            <span class="badge-modern badge-pending">Pending</span>
                                            break;
                                        case "Completed":
                                            <span class="badge-modern badge-active">Completed</span>
                                            break;
                                        case "Missed":
                                            <span class="badge-modern badge-inactive">Missed</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge-modern badge-inactive">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge-modern badge-pending">@appt.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@appt.Notes</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-3">No appointments found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav class="pagination-modern">
            <ul class="pagination mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == 1 ? "#" : $"?id={Model.Pet.PetID}&page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&categoryFilter={Model.CategoryFilter}")">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?id=@Model.Pet.PetID&page=1&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?id=@Model.Pet.PetID&page=@(Math.Max(1, Model.CurrentPage - blockSize))&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">...</a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?id=@Model.Pet.PetID&page=@i&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?id=@Model.Pet.PetID&page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">...</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="?id=@Model.Pet.PetID&page=@Model.TotalPages&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?id={Model.Pet.PetID}&page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&categoryFilter={Model.CategoryFilter}")">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
