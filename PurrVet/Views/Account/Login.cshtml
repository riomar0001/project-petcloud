@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section d-flex flex-column justify-content-center">
    <div class="hero-wave"></div>

    <div class="container">
        <div class="row align-items-center justify-content-center text-center text-md-start">
            <div class="col-md-3 mb-4 mb-md-0 slogan-col">
                <h1 class="fw-bold slogan">Healthy Pets,<br />Happy Homes.</h1>
            </div>

            <div class="col-md-2 mb-4 mb-md-0 paws-col d-flex justify-content-center">
                <img src="~/images/paws.png" alt="Paws" class="login-paws" />
            </div>

            <div class="col-md-5 d-flex justify-content-end">
                <div class="login-card shadow p-4 w-100" style="max-width: 400px;">

                    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
                        <div id="messageToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body"></div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>

                    <h6 class="mb-3 text-center fw-bold">Welcome, Paw! Please log in to access your account.</h6>
                    <hr class="mb-4">

                    <form id="loginForm">
                        @Html.AntiForgeryToken()
                        <h6 class="fw-bold text-start mb-3">Login</h6>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" />
                        </div>

                        <div class="mb-3 position-relative">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" />
                            <span id="togglePassword"
                                  class="position-absolute top-50 end-0 translate-middle-y me-3"
                                  style="cursor:pointer; font-size:12px; color:#666;">
                                <i id="eyeIcon" class="fa-solid fa-eye"></i>
                            </span>
                        </div>
                            <div class="mb-3 mt-3 d-flex justify-content-center">
                                <div class="g-recaptcha"
                                data-sitekey="6LeHpBosAAAAAOT3RVMuW-M-5BwRoyKKAII748QC">
                            </div>
                            </div>
                        <div class="text-start mb-3">
                            <a href="/Account/ForgotPassword" class="forgot-link">Forget Password</a>
                        </div>
                        <div class="text-center mb-1">
                            <img src="~/images/golden.png" alt="Golden Dog" class="dog-img" />
                        </div>

                        <button type="submit" class="btn-skyblue w-100">Log In</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
                $(document).ready(function () {

            const toastEl = $('#messageToast');
            const toastBody = toastEl.find('.toast-body');

           $("#togglePassword").click(function () {
                const passwordField = $("#password");
                const icon = $("#eyeIcon");
                const isHidden = passwordField.attr("type") === "password";

                passwordField.attr("type", isHidden ? "text" : "password");
                icon.toggleClass("fa-eye fa-eye-slash");
            });


            $('#loginForm').submit(function (e) {
                e.preventDefault();

                const email = $('#email').val().trim();
                const password = $('#password').val().trim();

                if (email === "" || password === "") {
                    toastBody.text("Email and password required.");
                    toastEl.removeClass('bg-success').addClass('bg-danger');
                    new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
                    return;
                }

                const formData = $(this).serialize();

                $.ajax({
                    url: '@Url.Action("Login", "Account")',
                    type: 'POST',
                    data: formData,
                    success: function (res) {

                        if (res.success && res.requires2FA) {
                            toastBody.html("Login successful! <br>We've sent a 6-digit verification code to your email.");
                            toastEl.removeClass('bg-danger').addClass('bg-success');
                            new bootstrap.Toast(toastEl[0], { delay: 4000 }).show();

                            setTimeout(() => {
                                window.location.href = "/Account/Verify2FA?userId=" + res.userId;
                            }, 3500);
                        }
                        else if (res.success) {
                            toastBody.text("Login successful! Redirecting...");
                            toastEl.removeClass('bg-danger').addClass('bg-success');
                            new bootstrap.Toast(toastEl[0], { delay: 1500 }).show();

                            setTimeout(() => {
                                window.location.href = res.redirectUrl;
                            }, 1200);
                        }
                        else {
                            toastBody.text(res.message);
                            toastEl.removeClass('bg-success').addClass('bg-danger');
                            new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
                        }
                    },
                    error: function () {
                        toastBody.text("An unexpected error occurred!");
                        toastEl.removeClass('bg-success').addClass('bg-danger');
                        new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
                    }
                });
            });

        });
    </script>
}
