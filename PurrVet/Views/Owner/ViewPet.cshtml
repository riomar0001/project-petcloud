@model PurrVet.Models.PetDetailsViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "My Pet Details";

    var categories = ViewBag.Categories as List<PurrVet.Models.ServiceCategory>;
    var selectedCategory = Model.CategoryFilter.HasValue
        ? categories?.FirstOrDefault(c => c.CategoryID == Model.CategoryFilter)?.ServiceType ?? "All"
        : "All";
    var fallback = Url.Content("~/uploads/profiles/pet.png");
    var photoPath = string.IsNullOrEmpty(Model.Pet.PhotoPath)
        ? fallback
        : Url.Content(Model.Pet.PhotoPath);
}

<div class="d-flex justify-content-between align-items-center p-2 flex-wrap">
    <div class="d-flex flex-wrap justify-content-end justify-content-md-end gap-2 w-100 w-md-auto mt-md-0">
        <a href="@Url.Action("ViewPet", "Owner", new { id = Model.Pet.PetID })"
           class="btn fw-semibold text-black"
           style="background-color:var(--primary-green, #10B981); border:none;">
            ?? Pet Info
        </a>

        <a href="@Url.Action("PetCard", "Owner", new { id = Model.Pet.PetID })"
           class="btn fw-semibold text-white"
           style="background-color:var(--primary-green, #10B981); border:none;">
            ?? Pet Card
        </a>
    </div>
</div>


<div class="p-3">
    <div class="card shadow-sm border-0 p-1 mb-4">
        <h5 class="fw-bold mb-3">Pet Information</h5>
        <div class="row g-4 align-items-center">
            <div class="col-md-3 text-center">
                <img src="@photoPath"
                     alt="@Model.Pet.Name"
                     class="rounded-circle shadow-sm"
                     style="width: 160px; height: 160px; object-fit: cover;"
                     onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />
            </div>
            <div class="col-md-9">
                <table class="table table-borderless align-middle mb-0">
                    <tbody>
                        <tr>
                            <th style="width: 20%">Pet ID</th>
                            <td>@Model.Pet.PetID</td>
                            <th style="width: 20%">Owner</th>
                            <td>@Model.Pet.Owner?.Name</td>
                        </tr>
                        <tr>
                            <th>Pet Name</th>
                            <td>@Model.Pet.Name</td>
                            <th>Type</th>
                            <td>@Model.Pet.Type</td>
                        </tr>
                        <tr>
                            <th>Breed</th>
                            <td>@Model.Pet.Breed</td>
                            <th>Age</th>
                            <td>@Model.AgeInMonths</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="d-flex flex-wrap align-items-center justify-content-start px-3 py-2" style="background-color:var(--primary-green-light, #D1FAE5);">
            <span class="fw-semibold me-2">Filter by Category:</span>
            <div class="dropdown me-3">
                <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        style="background-color:var(--primary-green, #10B981);">
                    @selectedCategory
                </button>
                <ul class="dropdown-menu statusfiltering">
                    <li><a class="dropdown-item text-black" href="?categoryFilter=">All</a></li>
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            <li><a class="dropdown-item text-black" href="?categoryFilter=@cat.CategoryID">@cat.ServiceType</a></li>
                        }
                    }
                </ul>
            </div>

            <form method="get" class="d-flex justify-content-end flex-grow-1">
                <input type="hidden" name="id" value="@Model.Pet.PetID" />
                <div class="input-group" style="max-width:300px;">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
                           value="@Model.SearchQuery" />
                    <button type="submit" class="btn" style="background-color:var(--primary-green, #10B981); color:white;">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="card-body">
            <h6 class="fw-bold mb-3">Appointment Records</h6>

            <div class="table-responsive">
                <table class="table align-middle text-center border">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Category</th>
                            <th>Subtype</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Appointments.Any())
                        {
                            foreach (var appt in Model.Appointments)
                            {
                                <tr>
                                    <td>@appt.AppointmentID</td>
                                    <td>@appt.ServiceCategory?.ServiceType</td>
                                    <td>@appt.ServiceSubtype?.ServiceSubType</td>
                                    <td>@appt.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>
                                        @switch (appt.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-primary">Pending</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case "Missed":
                                                <span class="badge bg-danger">Missed</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@appt.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>@appt.Notes</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-3">No appointments found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav class="mt-3">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == 1 ? "#" : $"?id={Model.Pet.PetID}&page={Model.CurrentPage - 1}&searchQuery={Model.SearchQuery}&categoryFilter={Model.CategoryFilter}")">
                            ‹
                        </a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link rounded-circle border-0 text-black"
                                   style="background-color:var(--primary-green, #10B981); width:32px; height:32px; display:flex; align-items:center; justify-content:center;"
                                   href="#">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link rounded-circle border-0 text-dark"
                                   style="width:32px; height:32px; display:flex; align-items:center; justify-content:center;"
                                   href="?id=@Model.Pet.PetID&page=@i&searchQuery=@Model.SearchQuery&categoryFilter=@Model.CategoryFilter">@i</a>
                            </li>
                        }
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link border-0 text-dark"
                           href="@(Model.CurrentPage == Model.TotalPages ? "#" : $"?id={Model.Pet.PetID}&page={Model.CurrentPage + 1}&searchQuery={Model.SearchQuery}&categoryFilter={Model.CategoryFilter}")">
                            ›
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
