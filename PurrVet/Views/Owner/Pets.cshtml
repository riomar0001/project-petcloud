@model IEnumerable<PurrVet.Models.Pet>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "My Pets";

}

<div class="p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold" style="font-size:20px; color:dimgray;">All Pets</h4>
        <div class="d-flex align-items-center gap-2">
            <input type="text" class="form-control" placeholder="Search..." style="max-width: 200px;">
            <button class="btn" style="background-color:#559DD4;">
                <i class="bi bi-search text-white"></i>
            </button>
            <a asp-controller="Owner" asp-action="Add" class="btn text-white d-flex align-items-center" style="background-color:#559DD4;">
                <i class="bi bi-plus me-1"></i> Add Pet
            </a>
        </div>
    </div>

    <div class="row g-3">
        @if (Model != null && Model.Any())
        {
            foreach (var pet in Model)
            {
                var photoPath = string.IsNullOrEmpty(pet.PhotoPath)
                ? Url.Content("~/uploads/profiles/pet.png")
                : Url.Content(pet.PhotoPath);

                <div class="col-md-3 col-sm-6">
                    <div class="card card-pet shadow-sm border-0 rounded-4 overflow-hidden">
                        <img src="@photoPath"
                             alt="@pet.Name"
                             class="card-img-top pet-photo"
                             style="height: 300px; object-fit: cover;"
                             onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />

                        <div class="card-body text-start">
                            <h4 class="card-title mb-1 fw-semibold">@pet.Name</h4>
                            <p class="text-dark mb-3">@pet.Breed</p>

                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Owner" asp-action="EditPet" asp-route-id="@pet.PetID"
                                   class="btn btn-sm btn-edit d-flex align-items-center justify-content-center"
                                   title="Edit"
                                   style="border-radius:10px; width:36px; height:36px;">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <a asp-controller="Owner" asp-action="ViewPet" asp-route-id="@pet.PetID"
                                   class="btn btn-sm btn-view d-flex align-items-center justify-content-center"
                                   title="View"
                                   style="border-radius:10px; width:36px; height:36px;">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-4">
                <p>No pets found. Add your first pet!</p>
            </div>
        }
    </div>
</div>
