@model IEnumerable<PetCloud.Models.Pet>

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "My Pets";

}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h2>My Pets</h2>
    <p>View and manage your pets</p>
</div>

<!-- Mobile Search -->
<div class="d-md-none mb-3" style="padding: 0 24px;">
    <div class="d-flex align-items-center gap-2">
        <input type="text" class="form-control search-box" placeholder="Search pets..." style="flex: 1;">
        <button class="btn btn-search">
            <i class="bi bi-search"></i>
        </button>
        <a asp-controller="Owner" asp-action="Add" class="btn btn-add-modern">
            <i class="bi bi-plus me-1"></i> Add Pet
        </a>
    </div>
</div>

<!-- Filter Bar -->
<div class="filter-bar-modern d-none d-md-flex" >
    <div class="d-flex align-items-center gap-3 flex-grow-1">
        <span class="filter-label">My Pets</span>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="search-box d-flex align-items-center">
            <i class="bi bi-search me-2 text-muted"></i>
            <input type="text" placeholder="Search pets..." class="border-0 bg-transparent flex-grow-1" style="outline: none;">
        </div>
        <a asp-controller="Owner" asp-action="Add" class="btn btn-add-modern">
            <i class="bi bi-plus me-1"></i> Add Pet
        </a>
    </div>
</div>

<div style="padding: 0 24px 24px;">
    <div class="row g-3">
        @if (Model != null && Model.Any())
        {
            foreach (var pet in Model)
            {
                var photoPath = string.IsNullOrEmpty(pet.PhotoPath)
                ? Url.Content("~/uploads/profiles/pet.png")
                : Url.Content(pet.PhotoPath);

                <div class="col-md-3 col-sm-6">
                    <div class="card card-pet shadow-sm border-0 rounded-4 overflow-hidden">
                        <img src="@photoPath"
                             alt="@pet.Name"
                             class="card-img-top pet-photo"
                             style="height: 300px; object-fit: cover;"
                             onerror="this.onerror=null;this.src='@Url.Content("~/uploads/profiles/pet.png")';" />

                        <div class="card-body text-start">
                            <h4 class="card-title mb-1 fw-semibold">@pet.Name</h4>
                            <p class="text-dark mb-3">@pet.Breed</p>

                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Owner" asp-action="EditPet" asp-route-id="@pet.PetID"
                                   class="btn-action btn-edit"
                                   title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <a asp-controller="Owner" asp-action="ViewPet" asp-route-id="@pet.PetID"
                                   class="btn-action btn-view"
                                   title="View">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-4">
                <p>No pets found. Add your first pet!</p>
            </div>
        }
    </div>
</div>
