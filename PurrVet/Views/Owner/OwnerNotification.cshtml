@model PurrVet.Models.NotificationListViewModel

@{
    Layout = "~/Views/Shared/_DashboardLayoutModern.cshtml";
    ViewBag.Title = "Notifications";
    int maxPagesToShow = 5;
    int blockSize = 10;
    int startPage = Math.Max(1, Model.CurrentPage - 2);
    int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
}
<div class="d-md-none px-3 mb-2">
    <form method="get" class="d-flex align-items-center gap-2 mb-2">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
               value="@Model.SearchQuery" />
        <button type="submit" class="btn" style="background-color:var(--primary-green, #10B981); color:white;">
            <i class="bi bi-search"></i>
        </button>
    </form>

    <button class="btn text-black w-100 fw-semibold" id="toggleFilter" style="background-color:var(--primary-green, #10B981);">
        <i class="bi bi-funnel"></i> Filters
    </button>
</div>
<div id="filterSection" class="filter-mobile d-flex flex-wrap align-items-center justify-content-start px-3 py-2 mb-3" style="background-color:var(--primary-green-light, #D1FAE5);">
    <span class="fw-semibold me-2">Filter Type:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                style="background-color:var(--primary-green, #10B981);">
            @(string.IsNullOrEmpty(Model.TypeFilter) ? "All" : Model.TypeFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-black" href="?typeFilter=All">All</a></li>
            <li><a class="dropdown-item text-black" href="?typeFilter=User">User</a></li>
            <li><a class="dropdown-item text-black" href="?typeFilter=Pet">Pet</a></li>
            <li><a class="dropdown-item text-black" href="?typeFilter=Appointment">Appointment</a></li>
        </ul>
    </div>

    <span class="fw-semibold me-2">Filter Status:</span>
    <div class="dropdown me-3">
        <button class="btn text-black dropdown-toggle" type="button" data-bs-toggle="dropdown"
                style="background-color:var(--primary-green, #10B981);">
            @(string.IsNullOrEmpty(Model.StatusFilter) ? "All" : Model.StatusFilter)
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item text-black" href="?statusFilter=All">All</a></li>
            <li><a class="dropdown-item text-black" href="?statusFilter=Read">Read</a></li>
            <li><a class="dropdown-item text-black" href="?statusFilter=Unread">Unread</a></li>
        </ul>
    </div>

    <form method="get" class="d-none d-flex justify-content-end flex-grow-1">
        <div class="input-group" style="max-width:300px;">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search..."
                   value="@Model.SearchQuery" />
            <button type="submit" class="btn" style="background-color:var(--primary-green, #10B981); color:white;">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>
<div class="card shadow-sm border-0">

    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="fw-bold mb-0">Notifications</h6>
            <button id="markAllReadPage" class="btn text-white" style="background-color:var(--primary-green, #10B981);">
                <i class="bi bi-check2-all me-1"></i> Mark All as Read
            </button>
        </div>

        <div class="table-responsive">
            <table class="table align-middle border">
                <thead class="table-light">
                    <tr>
                        <th style="width: 30%">Message</th>
                        <th style="width: 15%">Type</th>
                        <th style="width: 20%">Date</th>
                        <th style="width: 10%">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Notifications != null && Model.Notifications.Any())
                    {
                        foreach (var n in Model.Notifications)
                        {
                            <tr class="@(n.IsRead ? "" : "table-primary fw-semibold")" data-url="@n.RedirectUrl">
                                <td class="text-center text-wrap">
                                    <div class="message-cell">
                                        @n.Message
                                    </div>
                                </td>
                                <td>@n.Type</td>
                                <td>@n.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                <td>
                                    @if (n.IsRead)
                                    {
                                        <span class="badge bg-success">Read</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary k">Unread</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-3">
                                No notifications found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav class="mt-3">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link border-0 text-dark"
                       href="@(Model.CurrentPage == 1 ? "#" : Url.Action("OwnerNotification", new {
                            page = Model.CurrentPage - 1,
                            typeFilter = Model.TypeFilter,
                            statusFilter = Model.StatusFilter,
                            searchQuery = Model.SearchQuery
                        }))">
                        ‹
                    </a>
                </li>

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link rounded-circle border-0 text-dark"
                           style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                           href="?page=1&typeFilter=@Model.TypeFilter&statusFilter=@Model.StatusFilter&searchQuery=@Model.SearchQuery">1</a>
                    </li>

                    <li class="page-item">
                        <a class="page-link border-0 text-dark fw-bold"
                           href="?page=@(Math.Max(1, Model.CurrentPage - blockSize))&typeFilter=@Model.TypeFilter&statusFilter=@Model.StatusFilter&searchQuery=@Model.SearchQuery">
                            ...
                        </a>
                    </li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <a class="page-link rounded-circle border-0 text-black"
                               style="background-color:var(--primary-green, #10B981);width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link rounded-circle border-0 text-dark"
                               style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                               href="?page=@i&typeFilter=@Model.TypeFilter&statusFilter=@Model.StatusFilter&searchQuery=@Model.SearchQuery">@i</a>
                        </li>
                    }
                }

                @if (endPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link border-0 text-dark fw-bold"
                           href="?page=@(Math.Min(Model.TotalPages, Model.CurrentPage + blockSize))&typeFilter=@Model.TypeFilter&statusFilter=@Model.StatusFilter&searchQuery=@Model.SearchQuery">
                            ...
                        </a>
                    </li>

                    <li class="page-item">
                        <a class="page-link rounded-circle border-0 text-dark"
                           style="width:32px;height:32px;display:flex;align-items:center;justify-content:center;"
                           href="?page=@Model.TotalPages&typeFilter=@Model.TypeFilter&statusFilter=@Model.StatusFilter&searchQuery=@Model.SearchQuery">@Model.TotalPages</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link border-0 text-dark"
                       href="@(Model.CurrentPage == Model.TotalPages ? "#" : Url.Action("OwnerNotification", new {
                            page = Model.CurrentPage + 1,
                            typeFilter = Model.TypeFilter,
                            statusFilter = Model.StatusFilter,
                            searchQuery = Model.SearchQuery
                        }))">
                        ›
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
    <div id="messageToast" class="toast align-items-center text-white border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmSaveModal" tabindex="-1" aria-labelledby="confirmSaveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h6 class="modal-title fw-bold" id="confirmSaveModalLabel">
                    Notifications
                </h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p class="mb-0 fw-semibold">Are you sure you want to mark all as "read?"</p>
            </div>
            <div class="modal-footer d-flex justify-content-end">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmSaveBtn" class="btn btn-success px-4">Confirm</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('table tbody tr[data-url]').css('cursor', 'pointer').on('click', function () {
                var url = $(this).data('url');
                if (url && url !== "null") {
                    window.location.href = url;
                }
            });
            var toastEl = $('#messageToast');
            var toastBody = toastEl.find('.toast-body');
            const confirmModal = new bootstrap.Modal(document.getElementById('confirmSaveModal'));

            $('#markAllReadPage').off('click').on('click', function (e) {
                e.preventDefault();
                confirmModal.show();
            });

            $('#confirmSaveBtn').off('click').on('click', function () {
                confirmModal.hide();

                $.ajax({
                    url: '@Url.Action("MarkAllNotificationsRead", "Owner")',
                    type: 'POST',
                    success: function (res) {
                        toastBody.text(res.message);
                        toastEl.removeClass('bg-success bg-danger')
                                .addClass(res.success ? 'bg-success' : 'bg-danger');

                        new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();

                        if (res.success) {
                            setTimeout(() => {
                                location.reload();
                            }, 1500);
                        }
                    },
                    error: function () {
                        toastBody.text("An error occurred while marking notifications as read.");
                        toastEl.removeClass('bg-success').addClass('bg-danger');
                        new bootstrap.Toast(toastEl[0], { delay: 3000 }).show();
                    }
                });
            });
        });
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById("toggleFilter");
            const filterSection = document.getElementById("filterSection");
            if (toggleBtn && filterSection) {
                toggleBtn.addEventListener("click", function () {
                    filterSection.classList.toggle("active");
                });
            }
        });
    </script>
}
